<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id='fleet_fuel_tank_view_form' model='ir.ui.view'>
        <field name="name">fleet.fuel.tank.form</field>
        <field name="model">fleet.fuel.tank</field>
        <field name="arch" type="xml">
            <form string="Fuel Tank">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="return_action_to_open"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-filter"
                                context="{'xml_id':'dyen_fleet.fleet_fuel_tank_filling_action'}"
                                string="Tank Filling"
                        />
                        <button name="return_action_to_open"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-adjust"
                                context="{'xml_id':'dyen_fleet.fleet_vehicle_log_fuel_action'}"
                            attrs="{'invisible': [('consumption_count', '=', 0)]}">
                            <field name="consumption_count" widget="statinfo" string="Consumptions"/>
                        </button>
                    </div>
<!--                    <group col="1">-->
                        <group string="Tank Details" >
                            <field name="name" required="1"/>
                            <field name="fuel_type" required="1" />
                            <field name="location" />
                            <field name="clean_date" />
                        </group>
                        <group string="Fuel Details" >
                            <label for="capacity" />
                             <div class="o_row">
                                 <field name="capacity"/><span>Liters</span>
                             </div>
                            <label for="liter" />
                             <div class="o_row">
                                 <field name="liter" readonly="1"/><span>Liters</span>
                             </div>
                            <field name="average_price" />
<!--                            <div class="oe_button_box" name="button_box">-->
<!--                                <button name="%(fleet_filling_fuel_tank_wizard_action)d" string="Add Fuel" type="action" class="btn-success"/>-->
<!--                            </div>-->
                        </group>
<!--                    </group>-->
<!--                    <group>-->
                        <group string="Last Filling Details" col="2">
                            <field name="last_fill_date" readonly="1"/>
                            <field name="last_add_fuel_date" readonly="1"/>
                        </group>
                        <group string="Consumption Details" col="2">
                            <field name="fuel_level" widget="percentage"/>
                        </group>
<!--                    </group>-->

                    <notebook>
                        <page string="Fuel Filling History">
                            <field name="filling_ids" readonly="1">
                                <tree>
                                    <field name="name" />
                                    <field name="date" />
                                    <field name="liter" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="fleet_fuel_tank_view_tree">
        <field name="name">fleet.fuel.tank.tree</field>
        <field name="model">fleet.fuel.tank</field>
        <field name="arch" type="xml">
            <tree string="Fuel Tank">
                <field name="name" />
                <field name="fuel_type" />
                <field name="location" />
                <field name="capacity" />
                <field name="liter" />
                <field name="fuel_level"/>
            </tree>
        </field>
    </record>

    <record id='fleet_fuel_tank_view_kanban' model='ir.ui.view'>
        <field name="name">fleet.fuel.tank.kanban</field>
        <field name="model">fleet.fuel.tank</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div>
                                <strong>
                                    <field name="name"/>
                                    <span class="float-right"><field name="fuel_type"/></span>
                                </strong>
                            </div>
                            <div>
                                <span><field name="capacity"/></span>
                            </div>
                            <div>
                                <span><field name="liter"/> Liter</span>
                                <span class="float-right"><field name="fuel_level"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id='fleet_fuel_tank_action' model='ir.actions.act_window'>
        <field name="name">Fuel Tank</field>
        <field name="res_model">fleet.fuel.tank</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new fuel tank
          </p>
        </field>
    </record>

    <menuitem action="fleet_fuel_tank_action" parent="fleet.fleet_configuration" id="fleet_fuel_tank_menu" groups="fleet.fleet_group_user"/>

    <record model="ir.ui.view" id="view_fleet_fuel_tank_filling_tree">
        <field name="name">fleet.fuel.tank.filling.tree</field>
        <field name="model">fleet.fuel.tank.filling</field>
        <field name="arch" type="xml">
            <tree string="Fuel tank filling" create="0">
                <field name="name" />
                <field name="date" />
                <field name="liter" />
                <field name="create_uid" />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="fleet_fuel_tank_filling_action">
        <field name="name">Fuel Tank Filling</field>
        <field name="res_model">fleet.fuel.tank.filling</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            There is no item of tank filling
          </p>
        </field>
    </record>
</odoo>