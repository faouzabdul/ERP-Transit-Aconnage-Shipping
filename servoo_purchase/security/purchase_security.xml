<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_category_purchase_need_management">
            <field name="name">Purchase need</field>
            <field name="description">Helps you manage your purchase needs.</field>
            <field name="sequence">4</field>
        </record>

          <record id="purchase_need_validator_group_user" model="res.groups">
            <field name="name">Validator</field>
            <field name="category_id"
                   ref="module_category_purchase_need_management"/>
          </record>

        <record id="purchase_need_super_validator_group_user" model="res.groups">
            <field name="name">Super Validator</field>
            <field name="category_id"
                   ref="module_category_purchase_need_management"/>
            <field name="implied_ids"
                   eval="[(4, ref('purchase_need_validator_group_user'))]"/>
          </record>

         <record id="purchase_need_approver_group_user" model="res.groups">
                <field name="name">Approver</field>
                <field name="category_id"
                       ref="module_category_purchase_need_management"/>
          </record>

        <record model="res.groups" id="group_purchase_applicant_service">
            <field name="name">Signature Applicant Service</field>
            <field name="category_id" ref="base.module_category_inventory_purchase"/>
            <field name="implied_ids"
                   eval="[(4, ref('purchase_need_validator_group_user'))]"/>
        </record>
        <record model="res.groups" id="group_purchase_supply">
            <field name="name">Signature Supply Department</field>
            <field name="category_id" ref="base.module_category_inventory_purchase"/>
            <field name="implied_ids"
                   eval="[(4, ref('purchase_need_validator_group_user'))]"/>
        </record>
        <record model="res.groups" id="group_purchase_accounting">
            <field name="name">Signature Accounting Department</field>
            <field name="category_id" ref="base.module_category_inventory_purchase"/>
            <field name="implied_ids"
                   eval="[(4, ref('purchase_need_validator_group_user'))]"/>
        </record>
        <record model="res.groups" id="group_purchase_applicant_direction">
            <field name="name">Signature Applicant Direction</field>
            <field name="category_id" ref="base.module_category_inventory_purchase"/>
            <field name="implied_ids"
                   eval="[(4, ref('purchase_need_validator_group_user'))]"/>
        </record>
        <record model="res.groups" id="group_purchase_management_control">
            <field name="name">Signature Management Control</field>
            <field name="category_id" ref="base.module_category_inventory_purchase"/>
            <field name="implied_ids"
                   eval="[(4, ref('purchase_need_validator_group_user'))]"/>
        </record>

    </data>
</odoo>