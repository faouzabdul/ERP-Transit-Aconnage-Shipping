        <record model="ir.ui.view" id="view_purchase_need_form" >
            <field name="name">view.purchase.need.form</field>
            <field name="model">servoo.purchase.need</field>
            <field name="arch" type="xml">
                <form string="Purchase need">
                    <header>
                        <button name="action_submit" states="draft" type="object" string="Submit"/>
                        <button name="action_validate" states="submitted" type="object" string="Validate" groups="servoo_purchase.purchase_need_validator_group_user"/>
                        <button name="action_super_validate" states="submitted" type="object" string="Validate (super)" groups="servoo_purchase.purchase_need_super_validator_group_user"/>
                        <button name="action_approve" states="validated" type="object" string="Approve" groups="servoo_purchase.purchase_need_approver_group_user"/>
                        <button name="action_draft" states="canceled" type="object" string="Open"/>
                        <button name="action_cancel" states="submitted,validated" type="object" string="Cancel" groups="servoo_purchase.purchase_need_validator_group_user, servoo_purchase.purchase_need_approver_group_user"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,validated,approved,done"/>
                    </header>
                    <sheet>
                        <group>
                            <group col="2">
                                <field name="name" readonly="1" />
                                <field name="date" required="1"/>
                                <field name="employee_id" readonly="1" required="1"/>
                                <field name="department_id" readonly="1" required="1"/>
                                <field name="employee_parent_id" readonly="1" />
                                <field name="our_needs" invisible="1" />
                            </group>
                            <group col="4" string="Description">
                                <field name="description" colspan="4" nolabel="1" required="1"/>
                            </group>
                        </group>
                    </sheet>
                     <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_purchase_need_filter">
            <field name="name">view.servoo.purchase.need.filter</field>
            <field name="model">servoo.purchase.need</field>
            <field name="arch" type="xml">
                <search string="Purchase need">
<!--                    <field name="name" sting="Need" filter_domain="['|', ('name', 'ilike', self), ('employee_id', 'child_of', self)]" />-->
                    <field name="employee_id" operator="child_of" />
                    <separator/>
                    <filter string="My Needs" domain="[('user_id', '=', uid)]" name="my_purchase_need" />
<!--                    <separator/>-->
<!--                    <group expand="0" string="Group By">-->
<!--                        <filter string="State" name="state" domain="[]" context="{'group_by': 'state'}" />-->
<!--                        <filter string="Requesting employee" name="employee_id" domain="[]" context="{'group_by': 'employee_id'}" />-->
<!--                        <filter name="department_id" string="Department" domain="[]" context="{'group_by': 'department_id'}" />-->
<!--                    </group>-->
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_purchase_need">
            <field name="name">Our purchase needs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">servoo.purchase.need</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_my_purchase_need': 1}</field>
            <field name="domain">[('our_needs', '=', True)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new purchase need!
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_all_purchase_need">
