       <record model="ir.ui.view" id="view_purchase_need_tree">
           <field name="name">view.purchase.need.tree</field>
           <field name="model">servoo.purchase.need</field>
           <field name="arch" type="xml">
               <tree string="Purchase need">
                   <field name="name" />
                   <field name="date" />
                   <field name="employee_id" />
                   <field name="department_id" />
                   <field name="state" />
               </tree>
           </field>
       </record>

        <record model="ir.ui.view" id="view_purchase_need_kanban">
            <field name="name">view.purchase.need.kanban</field>
            <field name="model">servoo.purchase.need</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name" />
                    <field name="date" />
                    <field name="employee_id" />
<!--                    <field name="department_id" />-->
                    <field name="description" />
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                                <div>
                                    <strong class="o_kanban_record_title"><span><field name="name"/></span></strong>
                                </div>
                                <div>
                                    <span class="o_kanban_record_subtitle">By <field name="employee_id"/> On <field name="date" /> </span>
                                </div>
                                <div>
                                    <field name="description" />
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

