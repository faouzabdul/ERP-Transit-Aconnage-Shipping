<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_servoo_logistic_formality_tree">
            <field name="name">view.formality.tree</field>
            <field name="model">servoo.logistic.formality</field>
            <field name="arch" type="xml">
                <tree string="Formalities" decoration-success="state=='done'" decoration-muted="state=='cancel'">
                    <field name="service_id" />
                    <field name="name" />
                    <field name="administration_id" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="amount" />
                    <field name="operation_id" />
                    <field name="agent_id" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_servoo_logistic_formality_form">
            <field name="name">view.formality.form</field>
            <field name="model">servoo.logistic.formality</field>
            <field name="arch" type="xml">
                <form string="Formality">
                    <header>
                        <button name="action_done" states="open" type="object" string="Done"/>
                        <button name="action_open" states="cancel" type="object" string="Open" groups="servoo_logistic.logistic_group_manager"/>
                        <button name="action_cancel" states="open,done" type="object" string="Cancel"/>
                        <field name="state" widget="statusbar" statusbar_visible="open,done"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="service_id" />
                                <field name="other_reference" />
                                <field name="administration_id" required="1" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}"/>
                                <field name="amount" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}"/>
                                <field name="operation_id" required="1" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}"/>
                                <field name="agent_id" />
                            </group>
                            <group col="4">
                                <field name="start_date" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}"/>
                                <field name="end_date" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Attachments">
                                <field name="attachment_ids" widget="many2many_binary" attrs="{'readonly': [('state', 'in', ('done','cancel'))]}"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_formalities">
            <field name="name">Formalities</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">servoo.logistic.formality</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new formality!
                </p>
            </field>
        </record>


        <record id="view_formality_type_tree" model="ir.ui.view">
            <field name="name">view.formality.type.tree</field>
            <field name="model">servoo.logistic.formality.type</field>
            <field name="arch" type="xml">
                <tree string="Formalities Type" editable="bottom">
                    <field name="name" />
                    <field name="code" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_formality_type">
            <field name="name">Formalities type</field>
            <field name="res_model">servoo.logistic.formality.type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree</field>
        </record>


    </data>
</odoo>