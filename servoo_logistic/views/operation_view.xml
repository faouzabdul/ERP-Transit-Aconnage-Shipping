<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_servoo_logistic_operation_nature_tree">
            <field name="name">servoo.logistic.operation.nature.tree</field>
            <field name="model">servoo.logistic.operation.nature</field>
            <field name="arch" type="xml">
                <tree string="Operation Nature" editable="bottom">
                    <field name="name" />
                    <field name="description" />
                    <field name="sequence_code" required="1" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_servoo_logistic_operation_nature_form">
            <field name="name">servoo.logistic.operation.nature.from</field>
            <field name="model">servoo.logistic.operation.nature</field>
            <field name="arch" type="xml">
                <form string="Operation Nature">
                    <sheet>
                            <group col="4">
                               <field name="name" />
                                <field name="sequence_code" required="1" />
                            </group>
                            <group string="Description" col="4">
                                <field name="description" colspan="4" nolabel="1"/>
                            </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="actions_operation_nature">
            <field name="name">Operation Nature</field>
            <field name="res_model">servoo.logistic.operation.nature</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new operation nature!
                </p>
            </field>
        </record>
        <record model="ir.ui.view" id="view_servoo_logistic_tree">
            <field name="name">servoo.logistic.operation.tree</field>
            <field name="model">servoo.logistic.operation</field>
            <field name="arch" type="xml">
                <tree string="Operations">
                    <field name="name" />
                    <field name="external_reference" />
                    <field name="operation_nature" />
                    <field name="operation_type" />
                    <field name="partner_id" />
                    <field name="transport_mode_id" />
                    <field name="date_debut" />
                    <field name="volume" />
                    <field name="weight" />
                    <field name="goods_description" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="view_servoo_logistic_form" model="ir.ui.view">
            <field name="name">servoo.logistic.operation.form</field>
            <field name="model">servoo.logistic.operation</field>
            <field name="arch" type="xml">
                <form string="Operation">
                    <header>
                        <button name="action_open" states="draft" type="object" string="Validate"/>
                        <button name="action_done" states="open" type="object" string="Done"/>
                        <button name="create_invoices" string="Create Invoice"
                        type="object" class="btn-primary" data-hotkey="q"/>
                        <button name="action_draft" states="cancel" type="object" string="Open" groups="servoo_logistic.logistic_group_manager"/>
                        <button name="action_cancel" states="open,done" type="object" string="Cancel"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="return_action_to_open"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o"
                            context="{'xml_id':'account.action_move_out_invoice_type'}"
                            help="show the invoices for this operation" >
                            <field name="invoice_count" widget="statinfo" string="Invoices"/>
                        </button>
                        </div>
                        <group>
                            <group col="4">
                                <field name="name" readonly="1" colspan="4"/>
                                <field name="partner_id" widget="res_partner_many2one" context="{'show_address': 1, 'show_vat': True}" options='{"always_reload": True}' colspan="4"/>
                                <field name="operation_nature" required="1" colspan="4" />
                                <field name="external_reference" colspan="4"/>
                                <field name="operation_type" colspan="4"/>
<!--                                <field name="parent_id"  readonly="0" colspan="4"/>-->
                                <field name="date_debut" />
                                <field name="date_end" />
                            </group>
                            <group string="Transport" col="4">
                                <field name="bill_of_lading" />
                                 <field name="arrival_date"/>
                                <field name="transport_mode_id" options="{'no_create': True}"/>
                                <field name="transport_means_id" options="{'no_create': True}"/>
                                <field name="departure_country_id" options="{'no_create': True}"/>
                                <field name="destination_country_id" options="{'no_create': True}"/>
                                <field name="loading_place_id"  options="{'no_create': True}" domain="[('country_id', '=', departure_country_id)]"/>
                                <field name="unloading_place_id" options="{'no_create': True}" domain="[('country_id', '=', destination_country_id)]" />
                                <field name="delivery_place" />
                                <field name="delivery_date" />
                            </group>
                            <group string="Goods" col="4">
                                <field name="goods_description" />
                                <field name="volume" />
                                <field name="weight" />
                            </group>

                        </group>
                        <notebook>
                                <page string="Formalities">
                                    <field name="formality_line" widget="one2many" mode="tree,kanban">
                                        <tree string="Formalities Lines" editable="bottom"
                                        decoration-success="state=='done'" decoration-muted="state=='cancel'">
                                            <field name="service_id" />
                                            <field name="name" />
                                            <field name="other_reference" />
                                            <field name="administration_id" required="0" />
                                            <field name="start_date" />
                                            <field name="amount" invisible="0"/>
                                            <field name="agent_id" invisible="0"/>
                                            <field name="end_date" invisible="0"/>
                                            <field name="state" invisible="1"/>
                                            <field name="attachment_ids" widget="many2many_binary" />
                                        </tree>
                                    </field>
                                </page>
                            <page string="Vehicles">
                                <field name="operation_vehicle_ids" widget="one2many" mode="tree,kanban">
                                    <tree string="Vehicles Lines" editable="bottom">
                                        <field name="vehicle_id" required="1"/>
                                        <field name="category_id" />
                                        <field name="license_plate" />
                                        <field name="vin_sn" />
                                        <field name="driver_id" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Documents" >
                                    <field name="document_ids"
                                        mode="tree,kanban"
                                    >
                                        <tree string="Documents Lines" editable="bottom">
                                            <field name="name" />
                                            <field name="document_type_id" />
                                            <field name="attachment_ids" widget="many2many_binary" />
                                        </tree>
                                    </field>
                                </page>
<!--                                <page string="Sub-operations">-->
<!--                                    <field name="child_ids" readonly="0">-->
<!--                                        <tree string="Sub-operations Lines">-->
<!--                                            <field name="name" />-->
<!--                                            <field name="external_reference" />-->
<!--                                            <field name="logistic_type" />-->
<!--                                            <field name="partner_id" />-->
<!--                                            <field name="date_debut" />-->
<!--                                            <field name="departure_country_id" />-->
<!--                                            <field name="destination_country_id" />-->
<!--                                        </tree>-->
<!--                                    </field>-->
<!--                                </page>-->
                            </notebook>
                            <div class="oe_chatter">
                                <field name="message_follower_ids"/>
                                <field name="activity_ids"/>
                                <field name="message_ids"/>
                            </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_operations" model="ir.actions.act_window">
            <field name="name">Operations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">servoo.logistic.operation</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new operation!
                </p>
            </field>
        </record>
    </data>
</odoo>