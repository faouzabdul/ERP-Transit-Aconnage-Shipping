<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_cashier_piece_document">
        <t t-call="web.basic_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.employee_id.user_id.partner_id.lang)"/>
            <div class="page">
                <div class="head">
                    <div class="row">
                        <div class="col-4" align="left">
                            <font size="0" style="font-size: 5pt; padding:0">
                                <table width="100%" cellspacing="0" cellpadding="0">
                                    <tr>
                                        <td>
                                            <img style="width: 30%;" t-att-src="image_data_uri(doc.company_id.logo)"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <t t-esc="doc.company_id.street"/>
                                        </td>
                                    </tr>
                                    <t t-if="doc.company_id.street2">
                                        <tr>
                                            <td>
                                                <t t-esc="doc.company_id.street2"/>
                                            </td>
                                        </tr>
                                    </t>
                                    <tr>
                                        <td>Tél.:
                                            <t t-esc="doc.company_id.phone"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>BP:
                                            <t t-esc="doc.company_id.zip"/>
                                            <t t-esc="doc.company_id.city"/>
                                            -
                                            <t t-esc="doc.company_id.country_id.name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Email:
                                            <t t-esc="doc.company_id.email"/>
                                        </td>
                                    </tr>
                                </table>
                            </font>
                        </div>
                        <div class="col-8" align="center">
                            <b>
                                <font style="font-size: 20pt">A</font>GENCE DE <font style="font-size: 20pt">P</font>RESTATIONS <font
                                    style="font-size: 20pt">M</font>ARITIMES S.A
                                <br>Ports - Logistics - Projects - Supply chain</br>
                            </b>
                        </div>
                    </div>
                    <div align="center">
                            <u>
                                <b style="font-size: 15pt">PIECE DE CAISSE "DEPENSES"</b>
                            </u>
                    </div>
                </div>
                <font size="0" style="font-size: 7pt; padding:0">
                    <div align="right">
                        N° Ordre:
                        <span t-field="doc.name"/>
                    </div>

                    <div align="right">
                        DATE <span t-field="doc.date" t-options='{"widget": "date","format": "dd/MM/yyyy"}'/>
                    </div>
                    <br>
                        PAYER À L'ORDRE DE:
                        <b><span t-field="doc.employee_id.name"/></b>
                    </br>
                    <br>
                        OBJET:
                        <b><span t-field="doc.object"/></b>
                    </br>
                    <b>
                        SOMME EN LETTRE: <b><span t-field="doc.amount_total_letter" /> </b>
                    </b>
                    <table style="border:1px solid #000000; text-align:center" width="100%">
                        <thead>
                            <tr>
                                <th style="border:1px solid #000000; text-align:center">N° DOSSIER/IMPUTATION</th>
                                <th style="border:1px solid #000000; text-align:center">LIBELLE</th>
                                <th style="border:1px solid #000000; text-align:center">MONTANTS</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.piece_line" t-as="line">
                                <tr>
                                    <td style="border:1px solid #000000; text-align:center">
                                        <span t-field="line.product_id.name"/>
                                    </td>
                                    <td style="border:1px solid #000000; text-align:center">
                                        <span t-field="line.description"/>
                                    </td>
                                    <td style="border:1px solid #000000; text-align:center">
                                        <span t-field="line.amount"/>
                                    </td>
                                </tr>
                            </t>
                            <tr>
                                <td colspan="2" style="border:1px solid #000000; text-align:right">Crédit Compte FCFA</td>
                                <td style="border:1px solid #000000; text-align:center">
                                    <span t-field="doc.amount_total"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <p />
                    <table width="100%" cellpadding="4" cellspacing="0">
                        <thead>
                            <tr>
                                <td colspan="5" width="100%"
                                    style="border: 1px solid #000000; text-align:center">
                                    NOM ET VISAS
                                </td>
                            </tr>
                            <tr valign="top">
                                <td style="border:1px solid #000000; text-align:center" width="25%">
                                        SERVICE DEMANDEUR
                                </td>
                                <td style="border:1px solid #000000; text-align:center" width="25%">
                                        DIRECTION GÉNÉRALE
                                </td>
                                <td style="border:1px solid #000000; text-align:center" width="25%">
                                        CAISSE
                                </td>
                                <td style="border:1px solid #000000; text-align:center" width="25%">
                                        BÉNÉFICIAIRE
                                </td>
                            </tr>
                            </thead>
                            <tr valign="top">
                                <td style="border:1px solid #000000; text-align:center" width="25%">
                                    <span t-field="doc.service_approval_agent_id.name"/>
                                    <br>
                                        <img  t-if="doc.service_approval_agent_id.digital_signature"
                                              t-att-src="image_data_uri(doc.service_approval_agent_id.digital_signature)"
                                             style="width: 100%;"/>
                                    </br>
                                    <br />
                                    <span t-field="doc.service_approval_date" t-options='{"widget": "date","format": "dd/MM/yyyy"}'/>
                                </td>
                                <td style="border:1px solid #000000; text-align:center" width="25%">
                                    <span t-field="doc.direction_approval_agent_id.name"/>
                                    <br>
                                        <img t-if="doc.direction_approval_agent_id.digital_signature"
                                             t-att-src="image_data_uri(doc.direction_approval_agent_id.digital_signature)"
                                             style="width: 100%;"/>
                                    </br>
                                    <br />
                                    <span t-field="doc.direction_approval_date" t-options='{"widget": "date","format": "dd/MM/yyyy"}'/>

                                </td>
                                <td style="border:1px solid #000000; text-align:center" width="25%">
                                    <span t-field="doc.cashier_approval_agent_id.name"/>
                                    <br>
                                        <img t-if="doc.cashier_approval_agent_id.digital_signature"
                                             t-att-src="image_data_uri(doc.cashier_approval_agent_id.digital_signature)"
                                             style="width: 100%;"/>
                                    </br>
                                    <br />
                                        <span t-field="doc.cashier_approval_date"
                                              t-options='{"widget": "date","format": "dd/MM/yyyy"}'/>

                                </td>
                                <td style="border:1px solid #000000; text-align:center" width="25%">
                                    <span t-field="doc.employee_id.name"/>
                                    <br>
                                        <img  t-if="doc.employee_id.user_id.digital_signature"
                                              t-att-src="image_data_uri(doc.employee_id.user_id.digital_signature)"
                                             style="width: 100%;"/>
                                    </br>
                                    <br />
                                    <span t-field="doc.date" t-options='{"widget": "date","format": "dd/MM/yyyy"}'/>
                                </td>
                            </tr>
                        </table>
                </font>
            </div>
        </t>
    </template>

    <template id="report_cashier_piece">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="servoo_finance.report_cashier_piece_document"
                   t-lang="doc.employee_id.user_id.partner_id.lang"/>
            </t>
        </t>
    </template>

    <record id="paperformat_cashier_piece" model="report.paperformat">
        <field name="name">Cashier Piece</field>
        <field name="default" eval="False"/>
        <field name="disable_shrinking" eval="True"/>
        <field name="format">A5</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">8</field>
        <field name="margin_bottom">8</field>
        <field name="margin_left">8</field>
        <field name="margin_right">8</field>
        <field name="dpi">96</field>
    </record>

    <record id="action_report_cashier_piece" model="ir.actions.report">
        <field name="name">Cashier Piece</field>
        <field name="model">servoo.cashier.piece</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">servoo_finance.report_cashier_piece</field>
        <field name="report_file">servoo_finance.report_cashier_piece</field>
        <field name="print_report_name">object.name</field>
        <field name="binding_model_id" ref="model_servoo_cashier_piece"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="paperformat_cashier_piece"/>
    </record>
</odoo>