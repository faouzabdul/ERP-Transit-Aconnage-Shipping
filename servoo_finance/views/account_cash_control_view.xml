<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_account_cash_control_report_tree">
            <field name="name">view.account.cash.control.report.tree</field>
            <field name="model">account.cash.control.report</field>
            <field name="arch" type="xml">
                <tree string="Cash Control">
                    <field name="name" />
                    <field name="date" />
                    <field name="cash_statement_id" />
                    <field name="journal_id" />
                    <field name="balance_start" />
                    <field name="cash_voucher_count" />
                    <field name="cash_voucher_amount" />
                    <field name="theoretical_balance" />
                    <field name="balance_end_real" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_account_cash_control_report_form">
            <field name="name">view.account.cash.control.report.form</field>
            <field name="model">account.cash.control.report</field>
            <field name="arch" type="xml">
                <form string="Cash Control">
                    <header>
                        <button type="action" name="%(servoo_finance.action_wizard_approve_cash_control_report)d" string="Approve"
                                groups="servoo_finance.cash_report_controller_group_user"
                            class="btn-primary" attrs="{'invisible':[('state','!=', 'edited')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="edited,controlled"/>
                    </header>
                    <sheet>
                       <group col="4">
                           <field name="name" />
                           <field name="date" />
                           <field name="cash_statement_id" readonly="1"/>
                           <field name="journal_id" />
                           <field name="balance_end" />
                           <field name="cash_voucher_count" />
                           <field name="cash_voucher_amount" />
                           <field name="pad_amount" readonly="1"/>
                           <field name="other_amount" readonly="1" />
                           <field name="theoretical_balance" />
                           <field name="balance_end_real" />
                           <field name="apm_balance" />
                           <field name="gap_balance" />
                       </group>
                        <group col="2">
                            <group col="2" string="Cashier">
                                <field name="cashier_agent_id" readonly="1"/>
                                <field name="cashier_date" readonly="1" />
                                <field name="cashier_cni" readonly="1"/>
                                <field name="cashier_note" readonly="1"/>
                            </group>
                            <group col="2" string="Controller" attrs="{'invisible': [('state', '=', 'edited')]}">
                                 <field name="controller_agent_id" readonly="1"/>
                                <field name="controller_date" readonly="1"/>
                                <field name="controller_cni" readonly="1"/>
                                <field name="controller_note" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Cash Vouchers">
                                <field name="cash_voucher_ids" widget="one2many" readonly="1">
                                    <tree>
                                        <field name="name" />
                                        <field name="date" />
                                        <field name="employee_id" />
                                        <field name="department_id" />
                                        <field name="object" />
                                        <field name="amount" />
                                        <field name="amount_justified" />
                                        <field name="justification_deadline" />
                                        <field name="state" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Ending Cash detail">
                                <field name="cashbox_lines_ids" widget="one2many" mode="tree">
                                    <tree>
                                        <field name="coin_value" readonly="1"/>
                                        <field name="number" readonly="1"/>
                                        <field name="subtotal" readonly="1"/>
                                        <field name="good_coin_number" />
                                        <field name="good_coin_subtotal" />
                                        <field name="bad_coin_number" />
                                        <field name="bad_coin_subtotal" />
                                    </tree>
                                </field>
                            </page>

                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_cash_control_report_kanban">
            <field name="name">view.cash.control.report.kanban</field>
            <field name="model">account.cash.control.report</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name" />
                    <field name="date" />
                    <field name="cashier_agent_id" />
                    <field name="cash_statement_id" />
                    <field name="journal_id" />
                    <field name="theoretical_balance" />
                    <field name="balance_end_real" />
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                                <div>
                                    <strong class="o_kanban_record_title"><span><field name="name"/></span></strong>
                                </div>
                                <div>
                                    <span class="o_kanban_record_subtitle">By <field name="cashier_agent_id"/> On <field name="date" /> </span>
                                </div>
                                <div>
                                    <field name="cash_statement_id" />
                                    <field name="theoretical_balance" />
                                    <field name="balance_end_real" />
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_cash_control_report">
            <field name="name">Cash Control Report</field>
            <field name="res_model">account.cash.control.report</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create': False}</field>
        </record>

        <record model="ir.actions.act_window" id="action_cash_control_report_to_control">
            <field name="name">Cash Control Report</field>
            <field name="res_model">account.cash.control.report</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create': False}</field>
            <field name="domain">[('state','=','edited')]</field>
        </record>
    </data>
</odoo>