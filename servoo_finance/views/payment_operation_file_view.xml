<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
<!--        Transit order-->
        <record model="ir.ui.view" id="view_payment_transit_form">
            <field name="name">view.payment.transit.form</field>
            <field name="model">servoo.transit.order</field>
            <field name="inherit_id" ref="servoo_transit.view_servoo_transit_form" />
            <field name="arch" type="xml">
                <button name="action_draft" position="before">
                    <button type="action" string="Create Payment Request"
                            context="{'default_file_reference': name}"
                            name="%(action_create_payment_request)d" attrs="{'invisible': [('state', '!=', 'open')]}"
                    />
                    <button type="action" string="Create Cash Piece"
                            context="{'default_file_reference': name}"
                            name="%(action_create_cashier_piece)d" attrs="{'invisible': [('state', '!=', 'open')]}"
                    />
                </button>
            </field>
        </record>
        <menuitem id="payment_transit_menu"  parent="servoo_transit.transit_menu_root" sequence="20" name="Finance">
<!--            Payment request-->
            <menuitem name="Payment Request" id="transit_payment_request_menu">
                <menuitem id="transit_our_payment_request_menu" action="servoo_finance.action_our_payment_request" />
                <menuitem id="transit_payment_request_to_approve_menu" action="servoo_finance.action_our_payment_request_to_approve"
                groups="servoo_finance.applicant_service_approval_group_user,servoo_finance.applicant_direction_approval_group_user"/>
            </menuitem>
<!--            Cash voucher-->
            <menuitem id="transit_cash_voucher_menu" name="Cash Voucher">
                <menuitem id="transit_our_cash_voucher_menu" action="servoo_finance.action_our_cash_voucher" />
                <menuitem id="transit_cash_voucher_to_approve_menu" action="servoo_finance.action_our_cash_voucher_to_approve"
                groups="servoo_finance.applicant_service_approval_group_user,servoo_finance.applicant_direction_approval_group_user"/>
            </menuitem>
<!--            Cashier piece-->
            <menuitem name="Cashier Piece" id="transit_cashier_piece_menu">
