<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_cashier_piece_tree">
            <field name="name">view.cashier.piece.tree</field>
            <field name="model">servoo.cashier.piece</field>
            <field name="arch" type="xml">
                <tree string="Cashier Piece">
                    <field name="name" />
                    <field name="date" />
                    <field name="employee_id" />
                    <field name="department_id" />
                    <field name="file_reference" />
                    <field name="cash_voucher_id" />
                    <field name="amount_total" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view"  id="view_cashier_piece_form">
            <field name="name">view.cashier.piece.form</field>
            <field name="model">servoo.cashier.piece</field>
            <field name="arch" type="xml">
                <form string="Cashier">
                    <header>
                        <button name="action_submit" type="object" string="Submit" states="draft"/>
                        <button name="%(action_wizard_cashier_piece)d"  groups="servoo_finance.applicant_service_approval_group_user" class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'service_approval')]}" string="Approve" type="action"/>

                        <button name="%(action_wizard_cashier_piece)d"  groups="servoo_finance.applicant_direction_approval_group_user, servoo_finance.general_direction_approval_group_user" class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'direction_approval')]}" string="Approve" type="action"/>

                        <button name="%(action_wizard_cashier_piece)d"  groups="servoo_finance.accounting_approval_group_user" class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'accounting_approval')]}" string="Approve" type="action"/>

                        <button name="%(action_wizard_cashier_piece)d"  groups="servoo_finance.management_control_approval_group_user" class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'management_control_approval')]}" string="Approve" type="action"/>

                        <button name="%(action_wizard_cashier_piece)d"  groups="servoo_finance.cashier_group_user" class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'cashier_approval')]}" string="Approve" type="action"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,service_approval,direction_approval,cashier_approval,management_control_approval,accounting_approval,done"/>
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="name" readonly="1" />
                            <field name="date" required="1" />
                            <field name="employee_id" readonly="1" required="1"/>
                            <field name="employee_parent_id" readonly="1" />
                            <field name="department_id" readonly="1" required="1" colspan="4"/>
                            <field name="file_reference" />
                            <field name="journal_id" required="1" options="{'no_create': True}"/>
                            <field name="cash_voucher_id" />
                            <field name="amount_total" />
                            <field name="amount_total_letter" readonly="1" colspan="4"/>
                            <field name="our_pieces" invisible="1" />
                            <field name="company_id" invisible="1" />
                        </group>
                        <group col="4" string="Description">
                            <field name="object" colspan="4" nolabel="1" required="1" />
                        </group>
                        <notebook>
                            <page string="Imputation">
                                <field name="piece_line" widget="one2many" mode="tree" >
                                    <tree string="Lines" editable="bottom">
                                        <field name="product_id" />
                                        <field name="description" />
                                        <field name="amount" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Documents">
                                <field name="document_ids" widget="one2many" mode="tree" >
                                    <tree string="Documents" editable="bottom">
                                        <field name="name" />
                                        <field name="attachment_ids" widget="many2many_binary" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Validation Chain">
                                <group col="4">
                                    <field name="service_approval_agent_id" readonly="1"/>
                                    <field name="service_approval_date" readonly="1"/>
                                    <field name="direction_approval_agent_id"  readonly="1"/>
                                    <field name="direction_approval_date" readonly="1"/>
                                    <field name="cashier_approval_agent_id" readonly="1"/>
                                    <field name="cashier_approval_date" readonly="1"/>
                                    <field name="management_control_approval_agent_id" readonly="1"/>
                                    <field name="management_control_approval_date" readonly="1"/>
                                    <field name="accounting_approval_agent_id" readonly="1"/>
                                    <field name="accounting_approval_date" readonly="1"/>

                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_cashier_piece_kanban">
            <field name="name">view.cashier.piece.kanban</field>
            <field name="model">servoo.cashier.piece</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name" />
                    <field name="date" />
                    <field name="employee_id" />
                    <field name="amount_total" />
                    <field name="object" />
                    <field name="file_reference" />
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                                <div>
                                    <strong class="o_kanban_record_title"><span><field name="name"/></span></strong>
                                </div>
                                <div>
                                    <span class="o_kanban_record_subtitle">By <field name="employee_id"/> On <field name="date" /> </span>
                                    <t t-if="file_reference">
                                        <p>File Reference <field name="file_reference" /> </p>
                                    </t>
                                </div>
                                <div>
                                    <field name="object" />
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.ui.view" id="view_cashier_piece_filter">
            <field name="name">view.cashier.piece.filter</field>
            <field name="model">servoo.cashier.piece</field>
            <field name="arch" type="xml">
                <search string="Cashier piece">
                    <field name="employee_id" operator="child_of" />
                    <field name="department_id" operator="child_of" />
                    <separator/>
                    <filter string="My Pieces" domain="[('create_uid', '=', uid)]" name="my_cashier_piece" />
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_our_cashier_piece">
            <field name="name">Our cashier pieces</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">servoo.cashier.piece</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_my_cashier_piece': 1}</field>
            <field name="domain">[('our_pieces', '=', True)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new cashier piece!
                </p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_all_cashier_piece">
            <field name="name">All cashier pieces</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">servoo.cashier.piece</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new cashier piece!
                </p>
            </field>
        </record>

        <record id="action_cashier_piece_to_approve" model="ir.actions.act_window">
            <field name="name">Cashier piece to approve</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">servoo.cashier.piece</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create': False}</field>
            <field name="domain">[('state','not in',('draft', 'done'))]</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No cashier piece to approve found
              </p>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_our_cashier_piece_to_approve">
            <field name="name">Cashier piece to approve</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">servoo.cashier.piece</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_my_cashier_piece': 1, 'create': False}</field>
            <field name="domain">[('our_pieces', '=', True), ('state','not in',('draft', 'done'))]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new cashier piece!
                </p>
            </field>
        </record>

        <record id="action_cashier_piece_approved" model="ir.actions.act_window">
            <field name="name">Cashier piece approved</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">servoo.cashier.piece</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create': False}</field>
            <field name="domain">[('state','=','done')]</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No cashier piece approved found
              </p>
            </field>
        </record>

        <record id="action_create_cashier_piece" model="ir.actions.act_window">
            <field name="name">Cashier Piece</field>
            <field name="res_model">servoo.cashier.piece</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>