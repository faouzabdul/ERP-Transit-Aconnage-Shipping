<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="wizard_cash_voucher_form">
        <field name="name">wizard.cash.voucher.form</field>
        <field name="model">servoo.cash.voucher.wizard</field>
        <field name="arch" type="xml">
            <form string="Cash Voucher">
               <sheet>
                   <group string="Confirmation ?" />
                    <group col="2">
                        <field name="cash_voucher_id" invisible="0" readonly="1"/>
                        <field name="state" invisible="0" readonly="1"/>
                        <field name="date" />
                        <field name="journal_id" attrs="{'invisible': [('state', '!=', 'cashier_approval')], 'required': [('state', '=', 'cashier_approval')]}" />
                        <field name="observation" />
                    </group>
                </sheet>
                <footer>
                    <button name="action_validate" string="Approve" type="object" class="oe_highlight" data-hotkey="q"/>
                    <button name="action_reject" string="Reject" type="object" class="btn-danger" data-hotkey="c"
                            attrs="{'invisible': [('state', 'not in', ('service_approval', 'direction_approval'))]}"
                    />
                    <button string="Discard" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_cash_voucher" model="ir.actions.act_window">
            <field name="name">Approve Cash Voucher</field>
            <field name="res_model">servoo.cash.voucher.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
</odoo>