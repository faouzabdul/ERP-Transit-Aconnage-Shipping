<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="wizard_pda_payment_form">
        <field name="name">servoo.shipping.pda.wizard.form</field>
        <field name="model">servoo.shipping.pda.wizard</field>
        <field name="arch" type="xml">
            <form string="Payment Wizard">
                <sheet>
                    <field name="available_payment_method_line_ids" invisible="1" />
                    <field name="hide_payment_method_line" invisible="1" />
                    <field name="currency_id" invisible="1" />
                    <group col="4">
                        <field name="journal_id" required="1" options="{'no_create': True, 'no_open': True}"/>
                        <field name="amount" required="1"/>
                        <field name="bank_statement_id" domain="[('journal_id', '=', journal_id), ('state', '=', 'open')]"
                        options="{'no_create': True, 'no_open': True}" required="1"/>
                        <field name="payment_date" required="1"/>
                        <field name="communication" required="1"/>
                    </group>
                     <footer>
                        <button string="Create Payment" name="action_create_payments" type="object" class="oe_highlight" data-hotkey="q"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_wizard_pda_payment" model="ir.actions.act_window">
        <field name="name">Register a payment</field>
        <field name="res_model">servoo.shipping.pda.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


</odoo>