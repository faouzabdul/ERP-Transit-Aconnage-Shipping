<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="servoo_view_account_payment_register_form">
            <field name="name">servoo.account.payment.register.form</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form" />
            <field name="arch" type="xml">
                <field name="journal_id" position="after">
                    <field name="bank_statement_id" required="1" domain="[('journal_id', '=', journal_id), ('state', '=', 'open')]"/>
                    <field name="account_bank_statement_line_id" />
                </field>
            </field>
        </record>
    </data>
</odoo>