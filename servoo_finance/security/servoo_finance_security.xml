<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_category_servoo_finance">
            <field name="name">Finance</field>
            <field name="description">Helps you manage your fiances.</field>
            <field name="sequence">4</field>
        </record>

        <record id="group_finance_readonly" model="res.groups">
            <field name="name">Show Invoice</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

          <record id="applicant_service_approval_group_user" model="res.groups">
            <field name="name">Applicant Service Approval</field>
            <field name="category_id"
                   ref="module_category_servoo_finance"/>
              <field name="implied_ids"
                   eval="[(4, ref('servoo_purchase.group_purchase_applicant_service'))]"/>
          </record>

        <record id="applicant_direction_approval_group_user" model="res.groups">
            <field name="name">Applicant Direction Approval</field>
            <field name="category_id"
                   ref="module_category_servoo_finance"/>
            <field name="implied_ids"
                   eval="[(4, ref('applicant_service_approval_group_user')), (4, ref('servoo_purchase.group_purchase_supply'))]"/>
        </record>

        <record id="general_direction_approval_group_user" model="res.groups">
            <field name="name">General Direction Approval</field>
            <field name="category_id"
                   ref="module_category_servoo_finance"/>
            <field name="implied_ids"
                   eval="[(4, ref('applicant_direction_approval_group_user')), (4, ref('servoo_purchase.group_purchase_applicant_direction'))]"/>
        </record>

         <record id="accounting_approval_group_user" model="res.groups">
                <field name="name">Accounting Approval</field>
                <field name="category_id"
                       ref="module_category_servoo_finance"/>
                <field name="implied_ids" eval="[(4, ref('servoo_purchase.group_purchase_accounting'))]" />
          </record>

        <record id="management_control_approval_group_user" model="res.groups">
                <field name="name">Management Control Approval</field>
                <field name="category_id"
                       ref="module_category_servoo_finance"/>
            <field name="implied_ids" eval="[(4, ref('servoo_purchase.group_purchase_management_control'))]" />
          </record>

        <record id="finance_approval_group_user" model="res.groups">
                <field name="name">Finance Approval</field>
                <field name="category_id"
                       ref="module_category_servoo_finance"/>
        </record>

        <record model="res.groups" id="group_finance_user">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_servoo_finance" />
            <field name="implied_ids" eval="[(4, ref('group_finance_readonly')), (4, ref('account.group_account_invoice'))]" />
        </record>

        <record id="cashier_group_user" model="res.groups">
                <field name="name">Cashier</field>
                <field name="category_id"
                       ref="module_category_servoo_finance"/>
        </record>

        <record id="cash_report_controller_group_user" model="res.groups">
                <field name="name">Cash report Controller</field>
                <field name="category_id"
                       ref="module_category_servoo_finance"/>
            <field name="implied_ids"
                   eval="[(4, ref('cashier_group_user'))]"/>
          </record>

        <record id="group_finance_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id"
                   ref="module_category_servoo_finance"/>
            <field name="implied_ids"
                   eval="[(4, ref('cash_report_controller_group_user'))]"/>
      </record>
    </data>
</odoo>