<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="wizard_stevedoring_mate_receipt_form">
        <field name="name">wizard.mate.receipt.form</field>
        <field name="model">servoo.stevedoring.mate.receipt.wizard</field>
        <field name="arch" type="xml">
            <form string="Mate Receipt">
               <sheet>
                        <group col="4">
                            <field name="date" />
                            <field name="customs_declaration_id" required="1" readonly="1"/>
                        </group>
                        <group col="2">
                            <field name="charger_id" widget="res_partner_many2one" colspan="2"
                                           context="{'show_address': 1, 'show_vat': True}"
                                           options='{"always_reload": True}'/>
                            <field name="vessel_id" />

                            <field name="loading_port" />
                            <field name="unloading_port" />
                        </group>
                        <group col="2">
                            <field name="terms_and_conditions" />
                            <field name="note" />
                        </group>
                    </sheet>
                <footer>
                    <button name="action_validate" string="Validate" type="object" class="oe_highlight" data-hotkey="q"/>
                    <button string="Discard" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_stevedoring_mate_receipt" model="ir.actions.act_window">
            <field name="name">Mate Receipt</field>
            <field name="res_model">servoo.stevedoring.mate.receipt.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
</odoo>