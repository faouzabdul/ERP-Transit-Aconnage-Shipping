<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_shipping_bl_inherit_form">
            <field name="name">view.shipping.bl.inherit.form</field>
            <field name="model">servoo.shipping.bl</field>
            <field name="inherit_id" ref="servoo_shipping.view_shipping_bl_form" />
            <field name="arch" type="xml">
                <xpath expr="//form/header/button[1]" position="after">
                    <field name="outturn_report_count" invisible="1" />
                    <button name="%(action_wizard_stevedoring_outturn_report)d"
                                                string="Create Outturn Report" type="action"
                                                attrs="{'invisible': [('outturn_report_count','&gt;=',1)]}"
                                                class="btn-primary" groups="servoo_stevedoring.stevedoring_group_user"/>
                </xpath>
                <xpath expr="//form/sheet/div[@name='button_box']/button[1]" position="after">
                    <button name="return_action_to_open"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-pencil-square-o"
                                    context="{'xml_id':'servoo_stevedoring.actions_outturn_report'}"
                                    help="show the outturn report for this bill of lading" >
                                <field name="outturn_report_count" widget="statinfo" string="Outturns Report"/>
                            </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>