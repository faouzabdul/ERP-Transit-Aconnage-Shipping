<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_stevedoring_operation_tree">
            <field name="name">view.stevedoring.operation.tree</field>
            <field name="model">servoo.stevedoring.operation</field>
            <field name="arch" type="xml">
                <tree string="Operation">
                    <field name="name" />
                    <field name="date_debut" />
                    <field name="date_end" />
                    <field name="stevedoring_file_id" />
                    <field name="shipping_file_id" />
                    <field name="operation_nature" />
                    <field name="name_of_responsible" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_stevedoring_operation_form">
            <field name="name">view.stevedoring.operation.form</field>
            <field name="model">servoo.stevedoring.operation</field>
            <field name="arch" type="xml">
                <form string="Operation">
                    <sheet>
<!--                        <group>-->
                            <group col="4">
                                <field name="name" colspan="4"/>
                                <field name="stevedoring_file_id" required="0"/>
                                <field name="shipping_file_id" required="0"/>
                                <field name="date_debut" required="1"/>
                                <field name="date_end" />
                                <field name="shift" />
                                <field name="operation_nature" />
                                <field name="name_of_responsible" />
                            </group>
<!--                        </group>-->
                        <notebook>
                            <page string="Operation Lines">
                                <field name="operation_line_ids" widget="one2many" mode="tree,form" required="1">
                                    <tree editable="bottom">
                                        <field name="product_id" />
                                        <field name="cargo_description" />
                                        <field name="location" />
                                        <field name="quantity" />
                                        <field name="unit_id" />
                                        <field name="weight" />
                                        <field name="volume" />
                                        <field name="note" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <div class="oe_chatter">
                            <field name="message_follower_ids"/>
                            <field name="activity_ids"/>
                            <field name="message_ids"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_stevedoring_operation">
            <field name="name">Stevedoring Operations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">servoo.stevedoring.operation</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new stevedoring operation!
                </p>
            </field>
        </record>
    </data>
</odoo>