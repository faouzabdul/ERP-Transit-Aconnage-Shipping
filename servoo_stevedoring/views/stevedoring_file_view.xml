<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_stevedoring_file_type_tree">
            <field name="name">view.stevedoring.file.type.tree</field>
            <field name="model">servoo.stevedoring.file.type</field>
            <field name="arch" type="xml">
                <tree string="File Type" editable="top">
                    <field name="name" />
                    <field name="description" />
                    <field name="sequence_code" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_stevedoring_file_type">
            <field name="name">Stevedoring File Type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">servoo.stevedoring.file.type</field>
            <field name="view_mode">tree</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new stevedoring file type!
                </p>
            </field>
        </record>

        <menuitem id="stevedoring_file_type_menu" parent="servoo_stevedoring.menu_stevedoring_config" action="action_stevedoring_file_type" />


        <record model="ir.ui.view" id="view_servoo_stevedoring_file_tree">
            <field name="name">servoo.stevedoring.file.tree</field>
            <field name="model">servoo.stevedoring.file</field>
            <field name="arch" type="xml">
                <tree string="stevedoring Files" decoration-success="state == 'done'" decoration-info="state == 'open'" decoration-warning="state == 'draft'">
                    <field name="name" />
                    <field name="file_type_id" />
                    <field name="date" />
                    <field name="consignee_agent_id" />
                    <field name="vessel_id" />
                    <field name="voyage_number" />
                    <field name="state" widget="badge" decoration-success="state == 'done'" decoration-info="state == 'open'" decoration-warning="state == 'draft'" />
                    <field name="invoice_state" widget="badge" decoration-success="invoice_state == 'invoiced'" decoration-warning="invoice_state == 'not_invoiced'" />
                </tree>
            </field>
        </record>
        
        <record id="view_servoo_stevedoring_file_form" model="ir.ui.view">
            <field name="name">servoo.stevedoring.file.form</field>
            <field name="model">servoo.stevedoring.file</field>
            <field name="arch" type="xml">
                <form string="stevedoring file">
                    <header>
                        <button name="action_open" states="draft" type="object" string="Validate" groups="servoo_stevedoring.stevedoring_group_user"/>
                        <button name="action_done" states="open" type="object" string="Done" groups="servoo_stevedoring.stevedoring_group_user"/>

                        <button name="create_invoices" string="Create Invoice"
                                groups="account.group_account_invoice"
                                type="object" class="btn-primary" data-hotkey="q"
                                attrs="{'invisible': ['|',('state', 'not in', ('open', 'done')), ('invoice_count','&gt;=',1)]}"/>

                        <button name="create_invoices" string="Create Invoice"
                                type="object" data-hotkey="q" groups="account.group_account_invoice"
                                attrs="{'invisible': ['|',('state', 'not in', ('open', 'done')), ('invoice_count','=',0)]}"/>

                        <button name="%(action_wizard_stevedoring_outturn_report)d"
                                groups="servoo_stevedoring.stevedoring_group_user"
                                                string="Create Outturn Report" type="action"/>
                        <button name="action_draft" states="cancel" type="object" string="Open"
                                groups="servoo_stevedoring.stevedoring_group_manager"/>
                        <button name="%(action_wizard_stevedoring_file_cancel)d" states="open,done" type="action" string="Cancel" groups="servoo_stevedoring.stevedoring_group_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="return_action_to_open"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-pencil-square-o"
                                    context="{'xml_id':'account.action_move_out_invoice_type'}"
                                    help="show the invoices for this stevedoring file">
                                <field name="invoice_count" widget="statinfo" string="Invoices"/>
                            </button>
                            <button name="open_operation_action" type="object" class="oe_stat_button" icon="fa-list-ul"
                                    context="{'xml_id':'servoo_stevedoring.action_stevedoring_operation'}"
                                    help="Show the operations for this stevedoring file">
                                <field name="operation_count" widget="statinfo" string="Operations"/>
                            </button>

                            <button name="open_operation_action" type="object" class="oe_stat_button" icon="fa-align-justify"
                                    context="{'xml_id':'servoo_stevedoring.actions_outturn_report'}"
                                    help="Show the outturn reports for this stevedoring file">
                                <field name="outturn_count" widget="statinfo" string="Outturns Reports"/>
                            </button>

                            <button name="open_mate_receipt" type="object" class="oe_stat_button" icon="fa-align-justify"
                                    context="{'xml_id':'servoo_stevedoring.actions_mate_receipt'}"
                                    help="Show the mate receipts for this stevedoring file">
                                <field name="mate_receipt_count" widget="statinfo" string="Mate Receipts"/>
                            </button>
                        </div>
                        <field name="invoice_state" invisible="1" />
                        <widget name="web_ribbon" title="Invoiced" attrs="{'invisible': [('invoice_state', '!=', 'invoiced')]}"/>
                        <group>
                            <group col="4">
                                <group colspan="2">
                                    <field name="name" readonly="1"/>
                                    <field name="file_type_id" required="1"/>
                                    <field name="external_reference" />
                                    <field name="shipping_file_id" />
                                    <field name="date" />
                                </group>
                                <group colspan="2">
                                    <field name="partner_ids" widget="many2many_tags" required="1"/>
                                    <field name="consignee_agent_id" widget="res_partner_many2one"
                                           context="{'show_address': 1, 'show_vat': True}"
                                           options='{"always_reload": True}'/>
                                </group>
                            </group>
<!--                            <group>-->
                                <group col="4">
                                    <field name="vessel_id" required="1"/>
                                    <field name="shipowner_id" widget="res_partner_many2one"
                                           context="{'show_address': 1, 'show_vat': True}"
                                           options='{"always_reload": True}'/>
                                    <field name="charterer_id" widget="res_partner_many2one"
                                           context="{'show_address': 1, 'show_vat': True}"
                                           options='{"always_reload": True}'/>
                                    <field name="voyage_number"/>
                                    <field name="loading_port" />
                                    <field name="discharge_port" />
                                    <field name="origin_place" />
                                    <field name="destination_place" />
                                </group>
<!--                            </group>-->
                            <group>
                                <group col="4">
                                    <field name="cargo_description" colspan="4" />
                                    <field name="date_debut_operation" />
                                    <field name="date_end_operation" />
                                </group>
                                <group col="4">
                                    <label for="manifested_quantity" />
                                    <div class="o_row">
                                         <field name="manifested_quantity" />
                                         <field name="unit_id" options="{'no_open': True, 'no_create': False}" />
                                    </div>
                                    <field name="manifested_tonnage" />
                                    <label for="unloaded_quantity" />
                                    <div class="o_row">
                                         <field name="unloaded_quantity" />
                                         <field name="unit_id" options="{'no_open': True, 'no_create': False}"  readonly="1"/>
                                    </div>
                                    <field name="unloaded_tonnage" />
                                    <label for="transported_quantity" />
                                    <div class="o_row">
                                         <field name="transported_quantity" />
                                         <field name="unit_id" options="{'no_open': True, 'no_create': False}"  readonly="1"/>
                                    </div>
                                    <field name="transported_tonnage" />
                                </group>
                            </group>
                        </group>
                        <notebook>
                            <page string="Bills of lading">
                                <field name="bl_ids" domain="[('shipping_file_id', '=', shipping_file_id)]"
                                context="{'default_vessel_id' : vessel_id, 'default_voyage_number': voyage_number,
                                    'default_loading_port': loading_port, 'default_discharge_port': discharge_port}"
                                >
                                    <tree string="Bill of lading">
                                        <field name="name"/>
                                        <field name="date"/>
                                        <field name="shipper_id"/>
                                        <field name="consignee_id"/>
                                        <field name="vessel_id"/>
                                        <field name="loading_port"/>
                                        <field name="discharge_port"/>
<!--                                        <field name="outturn_report_count" invisible="1" />-->
<!--                                        <button name="%(action_wizard_stevedoring_outturn_report)d"-->
<!--                                                string="Create Outturn Report" type="action"-->
<!--                                                attrs="{'invisible': [('outturn_report_count','&gt;=',1)]}"-->
<!--                                                class="btn-primary"/>-->
<!--                                        <button name="%(action_report_outturn_report)d" type="action"-->
<!--                                                attrs="{'invisible': [('outturn_report_count','&gt;=',1)]}"-->
<!--                                                class="oe_stat_button" icon="fa-print"/>-->
                                    </tree>
                                    <form>
                                        <group col="4">
                                            <label for="name" string="Reference" />
                                            <field name="name" nolabel="1"/>
                                            <field name="date"/>
                                            <field name="shipper_id"/>
                                            <field name="consignee_id"/>
                                            <field name="notify_id"/>
                                            <field name="vessel_id"/>
                                            <field name="voyage_number"/>
                                            <field name="loading_port"/>
                                            <field name="discharge_port"/>
                                        </group>
                                        <group string="Cargo Description">
                                            <field name="cargo_description" colpsan="4" nolabel="1" required="1"/>
                                        </group>
                                        <notebook>
                                            <page string="Goods Details">
                                                <field name="good_ids" widget="one2many" required="1" mode="tree,form">
                                                    <tree string="Good">
                                                        <field name="name"/>
                                                        <field name="quantity"/>
                                                        <field name="unit_id"/>
                                                        <field name="gross_weight"/>
                                                        <field name="net_weight"/>
                                                        <field name="volume"/>
                                                    </tree>
                                                    <form string="Good">
                                                        <sheet>
                                                            <group col="4">
                                                                <field name="name" colpsan="4"/>
                                                                <field name="quantity"/>
                                                                <field name="unit_id"/>
                                                                <field name="gross_weight"/>
                                                                <field name="net_weight"/>
                                                                <field name="volume"/>
                                                            </group>
                                                        </sheet>
                                                    </form>
                                                </field>
                                            </page>
                                        </notebook>
                                    </form>
                                </field>
                            </page>
                            <page string="Customs Declarations">
                                <field name="customs_declaration_ids" widget="one2many" mode="tree,form"
                                    context="{'default_vessel_id' : vessel_id, 'default_voyage_number': voyage_number,
                                    'default_loading_port': loading_port, 'default_unloading_port': discharge_port}"
                                >
                                    <tree string="Customs Declaration">
                                        <field name="name" />
                                        <field name="date" />
                                        <field name="charger_id" />
                                        <field name="loading_port" />
                                        <field name="unloading_port" />
                                        <field name="mate_receipt_count" invisible="1" />
                                        <button name="%(action_wizard_stevedoring_mate_receipt)d"
                                                groups="servoo_stevedoring.stevedoring_group_user"
                                                string="Create Mate Receipt" type="action"
                                                attrs="{'invisible': [('mate_receipt_count','&gt;=',1)]}"
                                                class="btn-primary"/>
                                    </tree>
                                    <form string="Customs Declaration">
                                        <sheet>
                                            <group col="4">
                                                <field name="name" />
                                                <field name="date" />
                                                <field name="charger_id" colspan="4"/>
                                                <field name="vessel_id" />
                                                <field name="voyage_number" />
                                                <field name="loading_port" />
                                                <field name="unloading_port" />
                                            </group>
                                            <notebook>
                                                <page string="Goods">
                                                    <field name="good_ids" widget="one2many" mode="tree" required="1">
                                                        <tree string="Cargo Description" editable="bottom">
                                                            <field name="name" />
                                                            <field name="quantity" />
                                                            <field name="unit_id" />
                                                            <field name="gross_weight" />
                                                            <field name="volume" />
                                                        </tree>
                                                    </field>
                                                </page>
                                            </notebook>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="Operations">
                                <field name="operation_ids" widget="one2many" mode="tree,form">
                                    <tree string="Operation">
                                        <field name="name" />
                                        <field name="date_debut" />
                                        <field name="date_end" />
                                        <field name="operation_nature" />
                                        <field name="name_of_responsible" />
                                        <button name="%(action_report_shift_report)d" type="action"
                                                class="oe_stat_button" icon="fa-print"/>
                                    </tree>
                                    <form>
                                        <sheet>
<!--                                            <group>-->
                                                <group col="4">
                                                    <field name="name"/>
                                                    <field name="operation_nature"/>
                                                    <field name="date_debut" required="1"/>
                                                    <field name="date_end"/>
                                                    <field name="shift" />
                                                    <field name="name_of_responsible" required="1"/>
                                                </group>
<!--                                            </group>-->
                                            <notebook>
                                                <page string="Operation Lines">
                                                    <field name="operation_line_ids" widget="one2many"
                                                           mode="tree,form" required="1">
                                                        <tree editable="bottom">
                                                            <field name="product_id"/>
                                                            <field name="cargo_description"/>
                                                            <field name="location"/>
                                                            <field name="quantity"/>
                                                            <field name="unit_id"/>
                                                            <field name="weight" />
                                                            <field name="volume"/>
                                                            <field name="note"/>
                                                        </tree>
                                                    </field>
                                                </page>
                                            </notebook>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="Invoice Elements">
                                <field name="formality_line" widget="one2many" mode="tree,kanban">
                                    <tree string="Formalities Lines" editable="bottom"
                                          decoration-success="state=='done'" decoration-muted="state=='cancel'">
                                        <field name="service_id"/>
                                        <field name="name"/>
                                        <field name="other_reference"/>
                                        <field name="administration_id" required="0"/>
                                        <field name="start_date"/>
                                        <field name="amount" invisible="0"/>
                                        <field name="agent_id" invisible="0"/>
                                        <field name="end_date" invisible="0"/>
                                        <field name="state" invisible="1"/>
                                        <field name="attachment_ids" widget="many2many_binary"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Documents">
                                <field name="document_ids"
                                       mode="tree,kanban"
                                >
                                    <tree string="Documents Lines" editable="bottom">
                                        <field name="name"/>
                                        <field name="document_type_id"/>
                                        <field name="attachment_ids" widget="many2many_binary"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <div class="oe_chatter">
                            <field name="message_follower_ids"/>
                            <field name="activity_ids"/>
                            <field name="message_ids"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="action_stevedoring_file" model="ir.actions.act_window">
            <field name="name">Stevedoring Files</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">servoo.stevedoring.file</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new stevedoring file!
                </p>
            </field>
        </record>
        <menuitem id="stevedoring_file_menu" parent="servoo_stevedoring.stevedoring_menu" action="action_stevedoring_file"  sequence="1"/>

        <record id="action_stevedoring_file_to_invoice" model="ir.actions.act_window">
            <field name="name">Stevedoring Files</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">servoo.stevedoring.file</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[('state', 'in', ('open','done')), ('invoice_count','&lt;=',1)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    There is no stevedoring file to invoice!
                </p>
            </field>
        </record>

        <menuitem id="stevedoring_invoice_menu" parent="account.menu_finance" name="Stevedoring" sequence="5">
            <menuitem id="stevedoring_file_invoice_menu" action="servoo_stevedoring.action_stevedoring_file_to_invoice" />
        </menuitem>
    </data>
</odoo>