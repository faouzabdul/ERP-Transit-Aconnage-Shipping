<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_document_type_tree">
            <field name="name">view.document.type.tree</field>
            <field name="model">servoo.stevedoring.document.type</field>
            <field name="arch" type="xml">
                <tree string="Documents Type" editable="bottom">
                    <field name="name" />
                    <field name="code" />
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_document_type">
            <field name="name">Documents Type</field>
            <field name="res_model">servoo.stevedoring.document.type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree</field>
        </record>


        <record model="ir.ui.view" id="view_document_tree">
            <field name="name">view.document.tree</field>
            <field name="model">servoo.stevedoring.document</field>
            <field name="arch" type="xml">
                <tree string="Documents">
                    <field name="name" />
                    <field name="document_type_id" />
                    <field name="file_id" />
                    <field name="create_uid" />
                    <field name="create_date" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_document_form">
            <field name="name">view.document.form</field>
            <field name="model">servoo.stevedoring.document</field>
            <field name="arch" type="xml">
                <form string="Document">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="document_type_id" />
                                <field name="file_id" />
                            </group>
                            <group>
                                <field name="create_uid" readonly="1" />
                                <field name="create_date" readonly="1" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Attachments">
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_documents">
            <field name="name">Documents</field>
            <field name="res_model">servoo.stevedoring.document</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>
    </data>
</odoo>