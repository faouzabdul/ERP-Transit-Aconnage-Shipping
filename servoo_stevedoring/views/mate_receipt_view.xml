<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_servoo_stevedoring_mate_receipt_tree">
            <field name="name">view.stevedoring.mate.receipt.tree</field>
            <field name="model">servoo.stevedoring.mate.receipt</field>
            <field name="arch" type="xml">
                <tree string="Mate Receipt">
                    <field name="name" />
                    <field name="date" />
                    <field name="customs_declaration_id" />
                    <field name="charger_id" />
                    <field name="vessel_id" />
                    <field name="loading_port" />
                    <field name="unloading_port" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_servoo_stevedoring_mate_receipt_form">
            <field name="name">view.stevedoring.mate.receipt.form</field>
            <field name="model">servoo.stevedoring.mate.receipt</field>
            <field name="arch" type="xml">
                <form string="Mate Receipt">
                    <sheet>
                        <group col="4">
                            <field name="name" />
                            <field name="date" />
                            <field name="customs_declaration_id" />
                            <field name="charger_id" />
                            <field name="vessel_id" />
                            <field name="terms_and_conditions" />
                            <field name="loading_port" />
                            <field name="unloading_port" />
                            <field name="note" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="actions_mate_receipt">
            <field name="name">Mate Receipt</field>
            <field name="res_model">servoo.stevedoring.mate.receipt</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new mate receipt!
                </p>
            </field>
        </record>
    </data>
</odoo>