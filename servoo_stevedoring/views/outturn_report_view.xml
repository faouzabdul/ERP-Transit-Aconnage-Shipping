<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_stevedoring_outturn_report_tree">
            <field name="name">view.stevedoring.outturn.report.tree</field>
            <field name="model">servoo.stevedoring.outturn.report</field>
            <field name="arch" type="xml">
                <tree string="Outturn Report">
                    <field name="name" />
                    <field name="date" />
                    <field name="consignee_id" />
                    <field name="vessel_id" />
                    <field name="voyage_number" />
                    <field name="loading_port" />
                    <field name="discharge_port" />

                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_stevedoring_outturn_report_form">
             <field name="name">view.stevedoring.outturn.report.form</field>
            <field name="model">servoo.stevedoring.outturn.report</field>
            <field name="arch" type="xml">
                <form string="Outturn Report">
                    <sheet>
                        <group col="4">
                            <field name="name" />
                            <field name="date" />
                            <field name="date_debut" />
                            <field name="date_end" />
                        </group>
                        <group col="4">
                            <field name="consignee_id" widget="res_partner_many2one" colspan="2"
                                           context="{'show_address': 1, 'show_vat': True}"
                                           options='{"always_reload": True}' required="1"/>
                            <field name="stevedoring_file_id" required="1"/>
                            <field name="vessel_id" />
                            <field name="voyage_number" />
                            <field name="loading_port" />
                            <field name="discharge_port" />
                        </group>
                        <notebook>
                            <page string="Bills of lading">
                                <field name="line_ids" widget="one2many" mode="tree,form" required="1">
                                    <tree>
                                        <field name="bl_id" />
                                        <field name="manifested_weight" />
                                        <field name="shortage_weight" />
                                        <field name="excess_weight" />
                                        <field name="delivery_weight" />
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group col="2">
<!--                                                <field name="bl_id" required="1"/>-->
                                                <field name="bl_id" required="1" domain="['|',('notify_id', '=', parent.consignee_id), ('vessel_id', '=', parent.vessel_id), ('voyage_number', '=', parent.voyage_number)]"/>
                                                <field name="note" />
                                            </group>
                                            <notebook>
                                                <page string="Goods">
                                                    <field name="bl_line_ids" widget="one2many" mode="tree, form" required="1">
                                                        <tree>
                                                            <field name="good_description" />
                                                            <field name="manifested_weight" />
                                                            <field name="shortage_weight" />
                                                            <field name="excess_weight" />
                                                            <field name="delivery_weight" />
                                                        </tree>
                                                        <form>
                                                            <field name="good_description" colspan="2" required="1"/>
                                                            <group string="Quantities" col="4">
                                                                <field name="manifested_quantity" />
                                                                <field name="unit_id" />
                                                                <field name="shortage_quantity" />
                                                                <field name="unit_id" />
                                                                <field name="excess_quantity" />
                                                                <field name="unit_id" />
                                                                <field name="delivery_quantity" />
                                                                <field name="unit_id" />
                                                            </group>
                                                            <group string="Tonnage" col="4">
                                                                <field name="manifested_weight" />
                                                                <field name="shortage_weight" />
                                                                <field name="excess_weight" />
                                                                <field name="delivery_weight" />
                                                            </group>
                                                        </form>
                                                    </field>
                                                </page>
                                            </notebook>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="actions_outturn_report">
            <field name="name">Outturn Report</field>
            <field name="res_model">servoo.stevedoring.outturn.report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new outturn report!
                </p>
            </field>
        </record>
    </data>
</odoo>