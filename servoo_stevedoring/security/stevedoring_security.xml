<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_category_stevedoring_management">
            <field name="name">Stevedoring</field>
            <field name="description">Helps you manage your stevedoring operations.</field>
            <field name="sequence">4</field>
        </record>

        <record id="stevedoring_group_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id"
                   ref="module_category_stevedoring_management"/>
          </record>

        <record id="stevedoring_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id"
                   ref="module_category_stevedoring_management"/>
            <field name="implied_ids"
                   eval="[(4, ref('stevedoring_group_user'))]"/>
            <field name="users"
                   eval="[(4, ref('base.user_root')),
                          (4, ref('base.user_admin'))]"/>
          </record>


    </data>
</odoo>