                    <p t-field="doc.note"/>
                    <p t-if="not is_html_empty(doc.payment_term_id.note)">
                        <span t-field="doc.payment_term_id.note"/>
                    </p>
                </font>
            </div>
            <div class="footer">
              <div class="row" align="right">
                  <font size="0" style="font-size: 5pt; padding:0"><span>Page </span><span class="page" />/<span class="topage" /></font>
              </div>
            </div>
        </t>
    </template>


    <template id="report_servoo_saleorder">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="servoo_sales.report_servoo_saleorder_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

    <template id="report_servoo_saleorder_pro_forma">
        <t t-call="web.html_container">
            <t t-set="is_pro_forma" t-value="True"/>
            <t t-set="docs" t-value="docs.with_context(proforma=True)"/>
            <t t-foreach="docs" t-as="doc">
                <t t-call="servoo_sales.report_servoo_saleorder_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

