<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.module.category" id="base.module_category_accounting_accounting">
            <field name="visible" eval="False" />
        </record>

        <record model="ir.module.category" id="module_category_servoo_account">
            <field name="name">Accounting</field>
            <field name="description">helps you to manage your accounting</field>
            <field name="sequence">4</field>
        </record>

        <record id="group_account_user" model="res.groups">
            <field name="name">Accountant</field>
            <field name="category_id" ref="module_category_servoo_account"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_user'))]"/>
        </record>

        <record id="group_account_accountant_manager" model="res.groups">
            <field name="name">Accounting Administrator</field>
            <field name="category_id" ref="module_category_servoo_account"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_manager')), (4, ref('group_account_user'))]"/>
        </record>



        <record model="ir.module.category" id="module_category_servoo_Invoice">
            <field name="name">Invoicing</field>
            <field name="description">Helps you manage your customers invoices.</field>
            <field name="sequence">4</field>
        </record>

        <record id="group_account_invoice" model="res.groups">
            <field name="name">Billing</field>
            <field name="category_id" ref="module_category_servoo_Invoice"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_invoice'))]"/>
        </record>

        <record id="group_account_manager" model="res.groups">
            <field name="name">Billing Administrator</field>
            <field name="category_id" ref="module_category_servoo_Invoice"/>
            <field name="implied_ids" eval="[(4, ref('account.group_account_manager')), (4, ref('group_account_invoice'))]"/>
        </record>

        <record model="ir.module.category" id="module_category_servoo_supplier_invoice">
            <field name="name">Supplier Invoice</field>
        </record>
        <record id="group_supplier_invoice_admissibility" model="res.groups">
            <field name="name">Admissibility</field>
            <field name="category_id" ref="module_category_servoo_supplier_invoice"/>
        </record>
        <record id="group_supplier_invoice_general_direction" model="res.groups">
            <field name="name">Direction Approval</field>
            <field name="category_id" ref="module_category_servoo_supplier_invoice"/>
        </record>
        <record id="group_supplier_invoice_department" model="res.groups">
            <field name="name">Department Approval</field>
            <field name="category_id" ref="module_category_servoo_supplier_invoice"/>
        </record>
        <record id="group_supplier_invoice_accounting" model="res.groups">
            <field name="name">Accounting Approval</field>
            <field name="category_id" ref="module_category_servoo_supplier_invoice"/>
        </record>
        <record id="group_supplier_invoice_management_control" model="res.groups">
            <field name="name">Management Control Approval</field>
            <field name="category_id" ref="module_category_servoo_supplier_invoice"/>
        </record>

    </data>
</odoo>