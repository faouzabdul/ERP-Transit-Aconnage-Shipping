<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_pda_document">
    <t t-call="web.basic_layout">
        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
        <div class="page">
            <div class="entete">
                    <div class="row">
                        <div class="col-4" align="left">
                            <font size="0" style="font-size: 5pt; padding:0">
                                <table width="100%" cellspacing="0" cellpadding="0">
                                    <tr>
                                        <td style="width: 100%;">
                                            <img t-att-src="image_data_uri(doc.company_id.logo)"/>
                                        </td>
                                        <td>
                                            <div style="white-space:pre">
<t t-esc="doc.company_id.street"/>
<t t-if="doc.company_id.street2">
<t t-esc="doc.company_id.street2"/>
</t>
Tél.: <t t-esc="doc.company_id.phone"/>
BP: <t t-esc="doc.company_id.zip"/> <t t-esc="doc.company_id.city"/> - <t t-esc="doc.company_id.country_id.name"/>
Email: <t t-esc="doc.company_id.email"/>
                                            </div>

                                        </td>
                                    </tr>
                                </table>
                            </font>
                        </div>
                        <div class="col-3">

                        </div>
                        <div class="col-3" align="right">
                            <font size="0" style="font-size: 5pt; padding:0">
                                <table width="100%" cellspacing="0" cellpadding="0">
                                    <tr><td>
                                        <br>Beneficiary:	Agence de Prestations Maritimes</br>
                                        <br>Bank:	CBC - Cameroun</br>
                                        <br>        Po box: 4004 – Douala - Bonanjo</br>
                                        <br>Account N°	CM21 10008 00020 37120801001-94</br>
                                        <br>Swift:	CBC DC MCX</br>
                                        <br>Corresponding	1 - NATIXIS	Swift: NATXFRPP – IBAN: FR76 3000 7000 1100 0996 0010 838</br>
                                        <br>	2 – FIMBANK Swift: FIMBMTM3 – IBAN: 060309VSTREUR013</br>
                                    </td></tr>
                                </table>
                            </font>
                        </div>
                    </div>
                </div>

            <div class="oe_structure"/>
            <font size="0" style="font-size: 7pt; padding:0">
                <br />
                <div align="center">
                    <b>
                        PROFORMA DISBURSEMENTS ACCOUNT - <span t-field="doc.location_code.name" /> N° <span t-field="doc.name"/>
                    </b>
                    <br />
                    <b>
                        TO : <span t-field="doc.partner_id" />
<!--                        <div t-field="doc.partner_id"-->
<!--                t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />-->
<!--            <p t-if="doc.partner_id.vat"><t t-esc="doc.company_id.account_fiscal_country_id.vat_label or 'Tax ID'"/>: <span t-field="doc.partner_id.vat"/></p>-->
                    </b>
                </div>
    <br />
            <div class="row mt32 mb32" id="informations">
                <div t-if="doc.client_order_ref" class="col-auto col-3 mw-100 mb-2">
                    <strong>Your Reference:</strong>
                    <p class="m-0" t-field="doc.client_order_ref"/>
                </div>
                <div t-if="doc.date_pda" class="col-auto col-3 mw-100 mb-2">
                    <strong>Date:</strong>
                    <p class="m-0" t-field="doc.date_pda" t-options='{"widget": "date"}'/>
                </div>
                <div t-if="doc.vessel_id" class="col-auto col-3 mw-100 mb-2">
                    <strong>VESSEL'S NAME:</strong>
                    <p class="m-0" t-field="doc.vessel_id.name"/>
                </div>
                <div t-if="doc.eta" class="col-auto col-3 mw-100 mb-2">
                    <strong>E T A:</strong>
                    <p class="m-0" t-field="doc.eta" t-options='{"widget": "date"}'/>
                </div>
                <div t-if="doc.number_of_days" class="col-auto col-3 mw-100 mb-2">
                    <strong>NO DAYS:</strong>
                    <p class="m-0" t-field="doc.number_of_days"/>
                </div>
                 <div t-if="doc.grt" class="col-auto col-3 mw-100 mb-2">
                    <strong>G R T:</strong>
                    <p class="m-0" t-field="doc.grt"/>
                </div>
                <div t-if="doc.cbm_vessel" class="col-auto col-3 mw-100 mb-2">
                    <strong>CBM VESSEL:</strong>
                    <p class="m-0" t-field="doc.cbm_vessel"/>
                </div>
                <div t-if="doc.tonnage_of_goods" class="col-auto col-3 mw-100 mb-2">
                    <span><strong><span t-field="doc.operation_type"/> CARGO - CBM:</strong></span>
                    <p class="m-0" t-field="doc.tonnage_of_goods"/>
                </div>
            </div>

            <!-- Is there a discount on at least one line? -->
            <t t-set="display_discount" t-value="any(l.discount for l in doc.shipping_pda_line)"/>

            <table class="table table-sm o_main_table">
                <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                <thead style="display: table-row-group">
                    <tr>
                        <th name="th_description" class="text-left">Description</th>
                        <th name="th_quantity" class="text-right">Quantity</th>
                        <th name="th_priceunit" class="text-right">Unit Price</th>
                        <th name="th_discount" t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                            <span>Disc.%</span>
                        </th>
                        <th name="th_taxes" class="text-right">Taxes</th>
                        <th name="th_subtotal" class="text-right">
                            <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                            <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="sale_tbody">

                    <t t-set="current_subtotal" t-value="0"/>

                    <t t-foreach="doc.shipping_pda_line" t-as="line">

                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                <td name="td_name"><span t-field="line.name"/></td>
                                <td name="td_quantity" class="text-right">
                                    <span t-field="line.product_uom_qty"/>
<!--                                    <span t-field="line.product_uom"/>-->
                                </td>
                                <td name="td_priceunit" class="text-right">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                                    <span t-field="line.discount"/>
                                </td>
                                <td name="td_taxes" class="text-right">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                </td>
                                <td name="td_subtotal" class="text-right o_price_total">
                                    <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td name="td_section_line" colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td name="td_note_line" colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>

                        <t t-if="current_section and (line_last or doc.shipping_pda_line[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td name="td_section_subtotal" colspan="99">
                                    <strong class="mr16">Subtotal</strong>
                                    <span
                                        t-esc="current_subtotal"
                                        t-options='{"widget": "monetary", "display_currency": doc.currency_id}'
                                    />
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>

            <div class="clearfix" name="so_total_summary">
                <div id="total" class="row" name="total">
                    <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                        <table class="table table-sm">
                            <!-- Tax totals -->
                            <t t-set="tax_totals" t-value="json.loads(doc.tax_totals_json)"/>
                            <t t-call="account.document_tax_totals"/>
                        </table>
                    </div>
                </div>
            </div>

            <div class="oe_structure"/>

            <p t-field="doc.note" />
            <p t-if="not is_html_empty(doc.payment_term_id.note)">
                <span t-field="doc.payment_term_id.note"/>
            </p>
            </font>

        </div>
    </t>
</template>

    <record id="paperformat_pda" model="report.paperformat">
        <field name="name">PDA</field>
        <field name="default" eval="False"/>
        <field name="disable_shrinking" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">8</field>
        <field name="margin_bottom">8</field>
        <field name="margin_left">8</field>
        <field name="margin_right">8</field>
        <field name="dpi">96</field>
    </record>

<template id="report_pda">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="servoo_shipping.report_pda_document" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>


</odoo>
