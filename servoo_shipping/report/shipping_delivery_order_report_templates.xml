<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_delivery_order_document">
    <t t-call="web.external_layout">
        <t t-set="doc" t-value="doc.with_context(lang=doc.consignee_id.lang)" />

        <div class="page">
            <div class="oe_structure"/>

            <h1 class="mt16">
                <span>DELIVERY ORDER</span>
            </h1>
            <div class="oe_structure"/>

            <p>
                <span t-field="doc.name"/>
                <p>Date: <span t-field="doc.date"/></p>
            </p>
            <div class="oe_structure"/>
            <p>Customer: <b><span t-field="doc.consignee_id.name" /> </b></p>
            <p>Address: <b><t t-if="doc.consignee_id.zip">BP <span t-field="doc.consignee_id.zip" /> </t><span t-field="doc.consignee_id.city" />, <span t-field="doc.consignee_id.country_id.name" /> </b></p>
            <div class="oe_structure"/>
            <p>M/V...<b><span t-field="doc.vessel_id.name" /></b> DATE OF ARRIVAL:</p>
            <p>Port of Loading: <b><span t-field="doc.loading_port.name" />, <span t-field="doc.loading_port.country_id.name" /> </b></p>
            <p>Final Destination: <b><span t-field="doc.discharge_port.name" />, <span t-field="doc.discharge_port.country_id.name" /> </b></p>
            <p>B/L N°: <b><span t-field="doc.bl_id.name" /> </b> N° of packages: <b><span t-field="doc.goods_description" /></b> </p>
            <div class="oe_structure"/>
            <p>Customs Declaration N°: <b><span t-field="doc.custom_declaration_reference"/> OF <span t-field="doc.custom_declaration_date"/></b></p>
            <p>Open yard / Warehouse: <b><span t-field="doc.warehouse"/></b></p>
           <div class="oe_structure"/>
            <p>
                <b>Validity: <span t-field="doc.validity_date"/></b>
            </p>
        </div>
    </t>
</template>


<template id="report_delivery_order">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="servoo_shipping.report_delivery_order_document" t-lang="doc.consignee_id.lang"/>
        </t>
    </t>
</template>


</odoo>
