<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_shipping_delivery_order_tree">
            <field name="name">shipping.delivery.order.tree</field>
            <field name="model">servoo.shipping.delivery.order</field>
            <field name="arch" type="xml">
                <tree string="Delivery Order">
                    <field name="name" />
                    <field name="date" />
                    <field name="validity_date" />
                    <field name="consignee_id" />
                    <field name="bl_id" />
                    <field name="vessel_id" />
                    <field name="custom_declaration_reference" />
                    <field name="custom_declaration_date" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_shipping_delivery_order_form">
            <field name="name">shipping.delivery.order.form</field>
            <field name="model">servoo.shipping.delivery.order</field>
            <field name="arch" type="xml">
                <form string="Delivery Order">
                    <header>

                    </header>
                    <sheet>
                        <group col="4">
                            <field name="name" colspan="4" readonly="1"/>
                            <field name="date"/>
                            <field name="validity_date" />
                            <field name="bl_id" />
                            <field name="consignee_id" readonly="1"/>
                            <field name="vessel_id" readonly="1" />
                            <field name="shipper_id"  readonly="1"/>
                            <field name="custom_declaration_reference" />
                            <field name="custom_declaration_date" />
                            <field name="loading_port"  readonly="1"/>
                            <field name="discharge_port" readonly="1"/>
                            <field name="warehouse" />
                        </group>
                        <group string="Goods Description">
                            <field name="goods_description" nolabel="1" colspan="4"/>
                        </group>
                        <div class="oe_chatter">
                            <field name="message_follower_ids"/>
                            <field name="activity_ids"/>
                            <field name="message_ids"/>
                        </div>
                    </sheet>

                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_delivery_order">
            <field name="name">Delivery Orders</field>
            <field name="res_model">servoo.shipping.delivery.order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new delivery order!
                </p>
            </field>
        </record>
        <menuitem id="shipping_delivery_order_menu" parent="servoo_shipping.shipping_menu" action="action_delivery_order" />
    </data>
</odoo>