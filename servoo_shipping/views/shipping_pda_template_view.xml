<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="shipping_pda_template_view_search" model="ir.ui.view">
        <field name="name">servoo.shipping.pda.template.search</field>
        <field name="model">servoo.shipping.pda.template</field>
        <field name="arch" type="xml">
            <search string="Search PDA Template">
                <field name="name"/>
                <filter string="Archived" name="inactive" domain="[('active','=', False)]"/>
            </search>
        </field>
    </record>

    <record id="shipping_pda_template_view_form" model="ir.ui.view">
        <field name="name">servoo.shipping.pda.template.form</field>
        <field name="model">servoo.shipping.pda.template</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="PDA Template">
                <sheet>
                    <div name="button_box" class="oe_button_box"/>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Standard Consultancy Package"/>
                        </h1>
                    </div>
                    <group>
                        <group col="4">
                           <field name="number_of_days" />
                            <field name="grt" />
                            <field name="cbm_vessel" />
                            <field name="tonnage" />
                            <field name="currency_id" />
                            <field name="exchange_rate" />
                        </group>
                        <group>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                        </group>
                        <group col="3" string="Legend for variables and rules">
                            <group>
                                <span colspan="2">Available variables:</span>
                                <span colspan="2">CBM: the CBM of vessel</span>
                                <span colspan="2">GRT: the GRT</span>
                                <span colspan="2">DAY: The number of days</span>
                                <span colspan="2">TONNAGE: The tonnage of goods in the vessel</span>
                                <span colspan="2">rules: object containing the rules code (previously computed)</span>
                            </group>
                            <group>
                                <span colspan="2">Returned value have to be set in the variable 'result_qty' for quantity</span>
                                <span colspan="2">Returned value have to be set in the variable 'result' for amount</span>
                            </group>
                        </group>
                    </group>
                    <notebook name="main_book">
                        <page string="Lines" name="order_lines">
                        <field name="shipping_pda_template_line_ids" widget="section_and_note_one2many">
                            <form string="Quotation Template Lines">
                                <!--
                                    We need the sequence field to be here for new lines to be added at the correct position.
                                    TODO: at some point we want to fix this in the framework so that an invisible field is not required.
                                -->
                                <field name="sequence" invisible="1"/>
                                <field name="display_type" invisible="1"/>
                                <field name="product_uom_category_id" invisible="1"/>
                                <group attrs="{'invisible': [('display_type', '!=', False)]}">
                                    <group>
                                        <field name="product_id" attrs="{'required': [('display_type', '=', False)]}"/>
                                        <label for="product_uom_qty"/>
                                        <div>
                                            <field name="product_uom_qty" class="oe_inline"/>
                                        </div>
                                    </group>
                                </group>
                                <notebook colspan="4" name="description">
                                    <page string="Description" name="order_description" attrs="{'invisible': [('display_type', '!=', False)]}">
                                        <field name="name" />
                                    </page>
                                    <page string="Section" name="order_section" attrs="{'invisible': [('display_type', '!=', 'line_section')]}">
                                        <field name="name" />
                                    </page>
                                    <page string="Note" name="order_note" attrs="{'invisible': [('display_type', '!=', 'line_note')]}">
                                        <field name="name" />
                                    </page>
                                </notebook>
                            </form>
                            <tree string="Quotation Template Lines" editable="bottom">
                                <control>
                                    <create name="add_product_control" string="Add a product"/>
                                    <create name="add_section_control" string="Add a section" context="{'default_display_type': 'line_section'}"/>
                                    <create name="add_note_control" string="Add a note" context="{'default_display_type': 'line_note'}"/>
                                </control>

                                <field name="display_type" invisible="1"/>
                                <field name="sequence" widget="handle"/>
                                <field name="product_id"/>
                                <field name="name" widget="section_and_note_text"/>
                                <field name="code"/>
<!--                                <field name="product_uom_qty"/>-->
                                <field name="quantity_python_compute" />
<!--                                <field name="unit_price"/>-->
                                <field name="amount_python_compute" />
                                <field name="product_uom_category_id" invisible="1"/>
                                <field
                                    name="product_uom_id"
                                    groups="uom.group_uom"
                                    attrs="{'required': [('display_type', '=', False)]}"
                                />
                            </tree>
                        </field>
                    </page>
                    </notebook>
                    <field name="note" nolabel="1"
                        placeholder="The Administrator can set default Terms &amp; Conditions in Sales Settings. Terms set here will show up instead if you select this PDA template."/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="shipping_pda_template_view_tree" model="ir.ui.view">
        <field name="name">servoo.shipping.pda.template.tree</field>
        <field name="model">servoo.shipping.pda.template</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="PDA Template">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="shipping_pda_template_action" model="ir.actions.act_window">
        <field name="name">PDA Templates</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">servoo.shipping.pda.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your PDA template
            </p><p>
                Use templates to create polished, professional quotes in minutes.
            </p>
        </field>
    </record>

