<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_servoo_transit_tree">
            <field name="name">servoo.transit.order.tree</field>
            <field name="model">servoo.transit.order</field>
            <field name="arch" type="xml">
                <tree string="Transit Orders" decoration-success="state == 'done'" decoration-info="state == 'open'" decoration-warning="state == 'draft'">
                    <field name="name" />
                    <field name="external_reference" />
                    <field name="agency_name" />
                    <field name="operation_type" />
<!--                    <field name="operation_type" />-->
<!--                    <field name="sub_operation_type" />-->
                    <field name="partner_id" />
                    <field name="bill_of_lading" />
                    <field name="transport_mode_id" />
                    <field name="date_debut" />
                    <field name="volume" />
                    <field name="gross_weight" />
                    <field name="goods_description" />
                    <field name="state" widget="badge" decoration-success="state == 'done'" decoration-info="state == 'open'" decoration-warning="state == 'draft'"/>
                </tree>
            </field>
        </record>

        <record id="view_servoo_transit_form" model="ir.ui.view">
            <field name="name">servoo.transit.order.form</field>
            <field name="model">servoo.transit.order</field>
            <field name="arch" type="xml">
                <form string="Transit Order">
                    <header>
                        <button name="action_open" states="draft" type="object" string="Validate" groups="servoo_transit.transit_group_user"/>
                        <button name="action_done" states="open" type="object" string="Done" groups="servoo_transit.transit_group_user"/>
                        <button name="create_invoices" string="Create Invoice"
                        type="object" class="btn-primary" data-hotkey="q" groups="account.group_account_invoice"
                        attrs="{'invisible': ['|',('state', 'not in', ('open', 'done')), ('invoice_count','&gt;=',1)]}"/>

                        <button name="create_invoices" string="Create Invoice"
                        type="object" data-hotkey="q" groups="account.group_account_invoice"
                        attrs="{'invisible': ['|',('state', 'not in', ('open', 'done')), ('invoice_count','=',0)]}"/>

                        <button name="action_draft" states="cancel" type="object" string="Open" groups="servoo_transit.transit_group_manager"/>
                        <button name="%(action_wizard_transit_order_cancel)d" states="open,done" type="action" string="Cancel" groups="servoo_transit.transit_group_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="return_action_to_open"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o"
                            context="{'xml_id':'account.action_move_out_invoice_type'}"
                            help="show the invoices for this transit order" >
                            <field name="invoice_count" widget="statinfo" string="Invoices"/>
                        </button>
                        </div>
                        <group>
                            <group col="4">
                                <field name="name" readonly="1"/>
                                <field name="agency_name" required="1" />
                                <field name="partner_id" widget="res_partner_many2one" context="{'show_address': 1, 'show_vat': True}" options='{"always_reload": True}' colspan="4"/>
                                <field name="external_reference" colspan="4" string="Client Reference" />
                                <field name="operation_type" required="1"/>
                                <field name="sub_operation_type" options="{'no_create': True}" domain="[('operation_type', '=', operation_type)]" required="0"/>
                                <field name="date_debut" />
                                <field name="date_end" />
                            </group>
                            <group string="Transport" col="4">
                                <field name="manifest_number" />
                                <field name="travel_reference" />
                                <field name="bill_of_lading" />
                                 <field name="arrival_date"/>
                                <field name="transport_mode_id" options="{'no_create': True}" required="1"/>
                                <field name="transport_means_id" options="{'no_create': False}"/>
                                <field name="departure_country_id" options="{'no_create': True}"/>
                                <field name="loading_place_id"  options="{'no_create': True}" domain="[('country_id', '=', departure_country_id)]"/>
                                <field name="transit_country_id" options="{'no_create': True}"/>
                                <field name="transit_place_id" options="{'no_create': True}" domain="[('country_id', '=', transit_country_id)]" />
                                <field name="destination_country_id" options="{'no_create': True}"/>
                                <field name="unloading_place_id" options="{'no_create': True}" domain="[('country_id', '=', destination_country_id)]" />
                                <field name="delivery_country_id" options="{'no_create': True}" />
                                <field name="delivery_place" />
                                <field name="delivery_date" />
                            </group>
                            <group string="Trade Terms" col="4">
                                <field name="incoterm_id" />
                                <field name="custom_regime_id" />
                                <field name="invoice_number" />
                                <field name="invoice_date" />
                                <field name="total_amount_currency" />
                                <field name="currency_id" />
                                <field name="fob_value_currency" />
                                <field name="exchange_rate" />
                                <field name="fob_value_xaf" readonly="1" />
                                <field name="fob_charges" />
                                <field name="freight_amount" />
                                <field name="insurance_amount" />
                            </group>
                            <group string="Goods" col="4">
                                <field name="goods_description" />
                                <field name="packaging_type_id" />
                                <field name="gross_weight" />
                                <field name="net_weight" />
                                <field name="volume" />
                            </group>


                        </group>
                        <notebook>
                            <page string="Goods Details">
                                <field name="good_ids" widget="one2many" mode="tree,kanban">
                                    <tree string="Good Lines">
                                        <field name="line_number" readonly="1" invisible="1"/>
                                        <field name="hscode_id" />
                                        <field name="name" required="1"/>
                                        <field name="quantity" />
                                        <field name="unit_id" />
                                        <field name="gross_weight" />
                                        <field name="volume" />
                                        <field name="brand" />
                                        <field name="fob_value_currency" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Containers">
                                <field name="container_ids" widget="one2many" mode="tree">
                                    <tree string="Container Lines" editable="bottom">
                                        <field name="container_id" required="1" />
                                        <field name="size_type_id" readonly="1" />
<!--                                        <field name="volume" />-->
                                        <field name="weight" />
                                        <field name="vgm" />
                                        <field name="package_count" />
                                        <field name="seal_1" />
                                        <field name="seal_2" />
                                        <field name="seal_3" />
                                    </tree>
                                </field>
                            </page>
                                <page string="Formalities">
                                    <field name="formality_line" widget="one2many" mode="tree,kanban">
                                        <tree string="Formalities Lines" editable="bottom"
                                        decoration-success="state=='done'" decoration-muted="state=='cancel'">
                                            <field name="service_id" />
                                            <field name="name" />
                                            <field name="other_reference" />
                                            <field name="administration_id" required="0" />
                                            <field name="start_date" />
                                            <field name="amount" invisible="0"/>
                                            <field name="agent_id" invisible="0"/>
                                            <field name="end_date" invisible="0"/>
                                            <field name="state" invisible="1"/>
                                            <field name="attachment_ids" widget="many2many_binary" />
                                        </tree>
                                    </field>
                                </page>
                            <page string="Documents" >
                                    <field name="document_ids"
                                        mode="tree,kanban"
                                    >
                                        <tree string="Documents Lines" editable="bottom">
                                            <field name="name" />
                                            <field name="document_type_id" />
                                            <field name="attachment_ids" widget="many2many_binary" />
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                            <div class="oe_chatter">
                                <field name="message_follower_ids"/>
                                <field name="activity_ids"/>
                                <field name="message_ids"/>
                            </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_servoo_transit_search">
            <field name="name">servoo.transit.order.search</field>
            <field name="model">servoo.transit.order</field>
            <field name="arch" type="xml">
                <search string="Transit Order">
                    <field name="name" />
                    <field name="external_reference" />
                    <field name="partner_id" />
                    <field name="bill_of_lading" />
                    <separator />
                    <group expand="0" string="Group By">
                        <filter string="Client" name="group_by_client" domain="[]" context="{'group_by': 'partner_id'}" />
                        <filter string="State" name="group_by_state" domain="[]" context="{'group_by': 'state'}" />
                        <filter string="Operation Type" name="group_by_operation_type" domain="[]" context="{'group_by': 'operation_type'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="action_transit_order" model="ir.actions.act_window">
            <field name="name">Transit Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">servoo.transit.order</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new transit order!
                </p>
            </field>
        </record>

        <record id="action_transit_order_to_invoice" model="ir.actions.act_window">
            <field name="name">Transit Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">servoo.transit.order</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create': False, 'edit': False}</field>
            <field name="domain">[('state', 'in', ('open','done')), ('invoice_count','&lt;=',1)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    There is no transit order to invoice!
                </p>
            </field>
        </record>

        <record id="action_transit_order_no_create" model="ir.actions.act_window">
            <field name="name">Transit Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">servoo.transit.order</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'create': False}</field>
            <field name="domain">[]</field>
        </record>

        <record model="ir.ui.view" id="view_transit_good_form">
            <field name="name">view.transit.good.form</field>
            <field name="model">servoo.transit.good</field>
            <field name="arch" type="xml">
                <form string="Good">
                    <sheet>
                        <grop>
                        <group col="4">
                            <field name="name" required="1" colspan="4"/>
                            <field name="hscode_id"  colspan="4"/>
                            <field name="trade_name" />
                            <field name="brand" />
                            <field name="quantity" />
                            <field name="unit_id" />
                            <field name="gross_weight" />
                            <field name="net_weight" />
                            <field name="volume" />
                            <field name="fob_value_currency" />
                        </group></grop>
                    </sheet>
                </form>
            </field>
        </record>
<!--        Operation sub type-->
        <record model="ir.ui.view" id="view_operation_sub_type_tree">
            <field name="name">operation.sub.type.tree</field>
            <field name="model">servoo.transit.operation.sub.type</field>
            <field name="arch" type="xml">
                <tree string="Operation sub type" editable="top">
                    <field name="name" />
                    <field name="operation_type" />
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_operation_sub_type">
            <field name="name">Sub Type</field>
            <field name="res_model">servoo.transit.operation.sub.type</field>
            <field name="view_mode">tree</field>
            <field name="type">ir.actions.act_window</field>
        </record>
    </data>
</odoo>