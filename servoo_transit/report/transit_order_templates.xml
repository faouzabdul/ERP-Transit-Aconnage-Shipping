<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_transit_order_document">
    <t t-call="web.external_layout">
        <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
        <div class="row justify-content-end">
                <div class="col-4">
                    <strong><h2>Transit Order</h2></strong>
                </div>
        </div>
        <t t-set="address">
            <strong><span>CUSTOMER : </span><u><span t-field="o.partner_id.name" /> </u></strong>
        </t>
        <t>
            <t t-set="information_block">
                <div class="row">
                    <div class="col-6">
                        <span>Y/REF. <span t-field="o.external_reference" /> </span>
                    </div>
                    <div class="col-6">
                        <span>FILE N° <span t-field="o.name" /> </span>
                    </div>

                </div>
            </t>
        </t>
        <br />
        <div class="page">
            <div class="oe_structure"/>

            <div id="informations" class="row mt32 mb32">
                <div class="col-3 bm-2">
                    <strong>VESSEL</strong> <span t-field="o.transport_means_id.name" />
                </div>
                <div  class="col-3 bm-2">
                    <strong>BILL N°</strong> <span t-field="o.bill_of_lading" />
                </div>
                <div class="col-3 bm-2">
                    <strong>OF</strong> <span t-field="o.arrival_date" />
                </div>
            </div>
            <div id="fly" class="row mt32 mb32">
                <div class="col-3 bm-2">
                    <strong>FLIGHT</strong>
                </div>
                <div  class="col-3 bm-2">
                    <strong>OF</strong>
                </div>
                <div class="col-3 bm-2">
                    <strong>LTA</strong>
                </div>
                <div class="col-3 bm-2">
                    <strong>SLTA</strong>
                </div>
            </div>
        <br />
            <table class="table table-sm o_main_table">
                <thead>
                    <tr>
                        <th name="th_mark"><strong>Marks</strong></th>
                        <th name="th_number"><strong>Number</strong></th>
                        <th name="th_packaging"><strong>Packaging</strong></th>
                        <th name="th_description"><strong>Description of goods</strong></th>
                        <th name="th_weight"><strong>Weight</strong></th>
                        <th name="th_volume"><strong>Volume</strong></th>
                        <th name="th_value"><strong>Value</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="o.good_ids" t-as="line">

                        <tr t-att-class="'bg-200 font-weight-bold'">
                            <t>
                                <td id="brand">
                                    <span t-field="line.brand"/>
                                </td>
                                <td name="number">
                                    <span t-field="line.quantity" />
                                    <span t-field="line.unit_id.description" />
                                </td>
                                <td>

                                </td>
                                <td>
                                    <span t-field="line.name"/>
                                </td>
                                <td>
                                    <span t-field="line.gross_weight"/>
                                </td>
                                <td>
                                    <span t-field="line.volume"/>
                                </td>
                                <td>
                                    <span t-field="line.fob_value_currency"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>

                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>


            <br />

            <div class="oe_structure"/>
        </div>
    </t>
</template>

<template id="report_transit_order">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="servoo_transit.report_transit_order_document" t-lang="o.partner_id.lang"/>
        </t>
    </t>
</template>
</odoo>
