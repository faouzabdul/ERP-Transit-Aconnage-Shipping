<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_category_logistic_management">
            <field name="name">Logistic</field>
            <field name="description">Helps you manage your logistic operations.</field>
            <field name="sequence">4</field>
        </record>

        <record id="logistic_group_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id"
                   ref="module_category_logistic_management"/>
          </record>

        <record id="logistic_group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id"
                   ref="module_category_logistic_management"/>
            <field name="implied_ids"
                   eval="[(4, ref('logistic_group_user'))]"/>
          </record>

    </data>
</odoo>