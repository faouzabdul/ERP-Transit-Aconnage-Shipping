<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="wizard_transit_order_cancel_form">
        <field name="name">wizard.transit.order.cancel.form</field>
        <field name="model">servoo.transit.order.cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Transit Order Cancel">
                <sheet>
                    <group col="2">
                        <field name="observation" />
                    </group>
                </sheet>
                <footer>
                    <button name="action_validate" string="Approve" type="object" class="oe_highlight" data-hotkey="q"/>
                    <button string="Discard" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_transit_order_cancel" model="ir.actions.act_window">
        <field name="name">Cancel Transit Order</field>
        <field name="res_model">servoo.transit.order.cancel.wizard</field>
        <field name="view_mode">form</field>
         <field name="view_id" ref="wizard_transit_order_cancel_form" />
        <field name="target">new</field>
    </record>
</odoo>